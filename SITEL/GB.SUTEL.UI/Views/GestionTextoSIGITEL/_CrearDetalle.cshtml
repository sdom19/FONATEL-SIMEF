@using GB.SIMEF.Resources;
@model GB.SIMEF.Entities.TipoContenidoTextoSIGITEL

<form>
    <div class="row">
        <input type="hidden" value="0" id="txtIdContenidoPantallaSIGITEL" />
        <div class="col-md-4 col-sm-9 col-md-offset-2 col-sm-offset-3">
            <div class="form-group row">
                <label for="ddlTipoContenidoDetalle" class="col-sm-12 col-form-label">@EtiquetasViewGestionTextoSIGITEL.TipoDetalle</label>
                <div class="col-sm-12">
                    <div class="select2-wrapper">
                        @Html.DropDownListFor(model => model.IdTipoContenidoTextoSIGITEL, new SelectList(ViewBag.tipoContenido, "Value", "Text"), Etiquetas.PlaceholderDropDown, new { @class = "listasDesplegables", id = "ddlTipoContenidoDetalle" })
                        <small id="tipoDetalleHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>
            </div>
            <div class="form-group row" id="seccion-descripcion">
                <label for="txtDescripcion" class="col-sm-12 col-form-label">@EtiquetasViewGestionTextoSIGITEL.Descripcion</label>
                <div class="col-sm-12">
                    <textarea id="txtDescripcion" maxlength="1500" placeholder="@EtiquetasViewGestionTextoSIGITEL.Descripcion" class="w-90 form-control form-control-fonatel alfa_numerico"></textarea>
                    <small id="descripcionHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
            <div class="form-group row hidden" id="seccion-imagen">
                <label class="col-sm-12 col-form-label">@EtiquetasViewGestionTextoSIGITEL.Imagen</label>
                <div class="col-sm-12">
                    <input type="file" id="imageFile" class="form-control form-control-fonatel" accept=".png,.jpg">
                    <small id="imagenHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
            <div class="form-group row hidden" id="seccion-carpeta-informes">
                <label for="txtCarpetaInformes" class="col-sm-12 col-form-label">@EtiquetasViewGestionTextoSIGITEL.URLInformes</label>
                <div class="col-sm-12">
                    <input type="text" aria-label="@EtiquetasViewGestionTextoSIGITEL.URLInformes" class="form-control form-control-fonatel alfa_numerico" maxlength="250" id="txtCarpetaInformes" aria-describedby="@EtiquetasViewGestionTextoSIGITEL.URLInformes" placeholder="@EtiquetasViewGestionTextoSIGITEL.URLInformes">
                    <small id="txtCarpetaInformesHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
            <div class="form-group row">
                <label for="txtOrden" class="col-sm-12 col-form-label">@EtiquetasViewGestionTextoSIGITEL.Orden</label>
                <div class="col-sm-12">
                    <input type="text" aria-label="Orden" class="form-control form-control-fonatel solo_numeros" id="txtOrden" aria-describedby="Orden" placeholder="Orden">
                    <small id="ordenHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
        </div>

        <div class="col-md-5 col-sm-9 col-md-offset-0 col-sm-offset-3">
            <div class="justify-content-center">
                <div class="form-group row">
                    <div class="col-lg-12">
                        <img id="imgPreview" height="200" />
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="row mt-5">
        <div class="col-lg-12 text-center">
            <button type="submit" id="btnGuardarDetalle" class="btn btn-fonatel btn-success-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonGuardar">@Etiquetas.BotonGuardar</button>

            <button type="submit" id="btnCancelarDetalle" class="btn btn-fonatel btn-error-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonCancelar">@Etiquetas.BotonCancelar</button>
        </div>
    </div>
</form>
