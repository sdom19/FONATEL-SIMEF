@model GB.SUTEL.UI.Models.NivelViewModels





<form id="formEditar" method="post"
      data-ajax="true" action="@Url.Action("Editar")"
      data-ajax-message="Actualizando Nivel...">




    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="modal fade" id="modalEditarNivel">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Editar Nivel</h4>
                </div>
                <div class="modal-body">

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            @Html.LabelFor(model => model.itemNivel.DescNivel, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.HiddenFor(model => model.itemNivel.IdNivel, new { @id = "IdNivel" })
                                @Html.EditorFor(model => model.itemNivel.DescNivel, new { htmlAttributes = new { @class = "form-control", @placeholder = "Descripción", @id = "txtNombreNivel" } })



                                @Html.ValidationMessageFor(model => model.itemNivel.DescNivel, "", new { @class = "text-danger" })
                                <br />
                                <div class="alert alert-danger hidden" role="alert" id="divMensajeErrorEditarNivel">
                                    <span id="MierrorMensaje"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="submit" value="Guardar Cambios" class="btn btn-success" alt="Guardar Cambios" title="Guardar Cambios" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal" title="Cancelar">Cancelar</button>                    
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</form>
