@using GB.SIMEF.Resources;

@if (ViewBag.ListaDetalle.Count == 0)
{
    @*
        <ul class="nav nav-tabs nav-tabs-fonatel mt-4">
            <li id="0"> <a data-toggle="tab" href="#">No hay información</a></li>
        </ul>
    *@
    <div id="0" class="tab-pane fade in active">

        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label for="txtCantidadRegistroIndicador" class="col-sm-12 col-form-label">@EtiquetasViewRegistroIndicadorFonatel.CantidadFilas</label>
                    <div class="col-sm-3 mt-2">
                        <input type="text" class="form-control form-control-fonatel solo_numeros" disabled id="txtCantidadRegistroIndicador" placeholder="Cantidad de Filas">
                    </div>
                    <div class="col-sm-9">
                        <button id="btnCantidadFilas" data-toggle="tooltip" data-placement="top" title='@EtiquetasViewRegistroIndicadorFonatel.GenerarFilas' class="btn btn-fonatel btn-success-fonatel">@EtiquetasViewRegistroIndicadorFonatel.GenerarFilas</button>
                    </div>
                </div>
            </div>

            <div class="col-sm-12 mt-4">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="txtDescripcionRegla" class="col-form-label">@EtiquetasViewRegistroIndicadorFonatel.NotasEncargado</label>
                        <textarea class="form-control form-control-fonatel textarea" disabled id="txtDescripcionRegla" placeholder="Notas"></textarea>
                    </div>
                </div>
                <div class="col-sm-6">

                    <div class="form-group">
                        <label for="txtDescripcionRegla" class="col-form-label">@EtiquetasViewRegistroIndicadorFonatel.NotasInformante</label>
                        <textarea class="form-control form-control-fonatel textarea" id="txtDescripcionRegla" placeholder="Notas"></textarea>
                    </div>
                </div>
            </div>

            <div class="col-sm-12 text-center mb-2" style="display: flow-root;">
                <button data-toggle="tooltip" data-placement="top" title="Descargar" class="btn btn-fonatel btn-purple-fonatel">Descargar plantilla</button>
                <button data-toggle="tooltip" data-placement="top" title="Cargar" class="btn btn-fonatel btn-success-fonatel">Cargar plantilla</button>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-sm-12 text-center">
                <button type="submit" data-toggle="tooltip" data-placement="top" title="Guardar" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
                <button type="submit" data-toggle="tooltip" data-placement="top" title="Validar" class="btn btn-fonatel btn-next-fonatel">@Etiquetas.BotonValidar</button>
                <button type="submit" data-toggle="tooltip" data-placement="top" title="Cancelar" class="btn btn-fonatel btn-error-fonatel">@Etiquetas.BotonCancelar</button>
            </div>
        </div>
    </div>
}

<ul class="nav nav-tabs nav-tabs-fonatel mt-4">
    @for (int i = 0; i < ViewBag.ListaDetalle.Count; i++)
    {
        string activo = "";
        if (i == 0) { activo = "active"; }
        <li class="@activo" id="@ViewBag.ListaDetalle[i].Indicador.IdIndicador"> <a data-toggle="tab" href="#@i" data-Indicador="@ViewBag.ListaDetalle[i].Indicador.IdIndicador">@ViewBag.ListaDetalle[i].TituloHoja</a></li>
    }
</ul>

<div class="tab-content">
    @for (int i = 0; i < ViewBag.ListaDetalle.Count; i++)
    {
        string clase = "tab-pane fade";
        if (i == 0) { clase = "tab-pane fade in active"; }

        <div id="@i" class="@clase">

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="txtCantidadRegistroIndicador" class="col-sm-12 col-form-label">@EtiquetasViewRegistroIndicadorFonatel.CantidadFilas</label>
                        <div class="col-sm-3 mt-2">
                            <input type="text" class="form-control form-control-fonatel solo_numeros" id="txtCantidadRegistroIndicador" placeholder="Cantidad de Filas">
                        </div>
                        <div class="col-sm-9">
                            <button id="btnCantidadFilas" data-toggle="tooltip" data-placement="top" title='@EtiquetasViewRegistroIndicadorFonatel.GenerarFilas' class="btn btn-fonatel btn-success-fonatel">@EtiquetasViewRegistroIndicadorFonatel.GenerarFilas</button>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 mt-4">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="txtDescripcionRegla" class="col-form-label">@EtiquetasViewRegistroIndicadorFonatel.NotasEncargado</label>
                            <textarea class="form-control form-control-fonatel textarea" disabled id="txtDescripcionRegla" placeholder="Notas">@ViewBag.ListaDetalle[i].NotaEncargado</textarea>
                        </div>
                    </div>
                    <div class="col-sm-6">

                        <div class="form-group">
                            <label for="txtDescripcionRegla" class="col-form-label">@EtiquetasViewRegistroIndicadorFonatel.NotasInformante</label>
                            <textarea class="form-control form-control-fonatel textarea" disabled id="txtDescripcionRegla" placeholder="Notas"></textarea>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 text-center mb-2" style="display: flow-root;">
                    <button data-toggle="tooltip" data-placement="top" title="Descargar" class="btn btn-fonatel btn-purple-fonatel" disabled>Descargar plantilla</button>
                    <button data-toggle="tooltip" data-placement="top" title="Cargar" class="btn btn-fonatel btn-success-fonatel" disabled>Cargar plantilla</button>
                </div>
            </div>

            <div class="table-responsive table-wrapper-fonatel mb-2">
                <table class="dataTable table-bordered table-condensed table-hover hidden disabled" id="tablaIndicador">
                    <thead>
                        <tr>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>

            <div class="row mt-4">
                <div class="col-sm-12 text-center">
                    <button type="button" data-toggle="tooltip" data-placement="top" title="Validar" class="btn btn-fonatel btn-next-fonatel" disabled>@Etiquetas.BotonValidar</button>
                </div>
            </div>
        </div>
    }
</div>

<hr />

<div class="row mt-4">
    <div class="col-sm-12 text-center">
        <button type="button" data-toggle="tooltip" data-placement="top" title="Guardar" class="btn btn-fonatel btn-success-fonatel" disabled>@Etiquetas.BotonGuardar</button>
        <button type="button" data-toggle="tooltip" data-placement="top" title="Cancelar" class="btn btn-fonatel btn-error-fonatel" disabled>@Etiquetas.BotonCancelar</button>
        <br />
        <button type="button" data-toggle="tooltip" data-placement="top" title="Cargar" class="btn btn-fonatel btn-info-fonatel" disabled>@Etiquetas.BotonCargar</button>
    </div>
</div>