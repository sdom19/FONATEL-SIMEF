@using GB.SIMEF.Resources;

<form>
    <div class="row">


        <div class="col-md-5 col-sm-12 col-md-offset-1">
            <div class="form-group row">
                <label for="ddlIndicadorFormulario" class="col-sm-12 col-form-label ">Indicador</label>
                <div class="col-sm-12">
                    <div class="select2-wrapper">
                        <select class="form-control form-control-fonatel required listasDesplegables" aria-label="Default select example" id="ddlIndicadorFormulario">
                            <option></option>
                            <option value="1">IP1Tor Torres según estado</option>
                            <option value="2">IP1CPSP CPSP Conectados</option>
                            <option value="2">IP2Hog Hogares Beneficiarios</option>
                        </select>
                    </div>
                   
             
                    <small id="ddlIndicadorFormularioHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
            <div class="form-group row">
                <label for="txtNotasEncargadoFormlulario" class="col-sm-12 col-form-label">Notas del Encargado</label>
                <div class="col-sm-12">
                    <textarea class="form-control form-control-fonatel" id="txtNotasEncargadoFormlulario" placeholder="Notas"></textarea>
                    <small id="txtNotasEncargadoFormlularioHelp" class="form-text">@Etiquetas.CampoRequerido</small>
                </div>
            </div>

        </div>

        <div class="col-md-5 col-sm-12 col-sm-offset-1">
            <div class="form-group row">
                <label for="txtTituloHoja" class="col-sm-12 col-form-label">Título de Hola</label>
                <div class="col-sm-12">
                    <input type="text" class="form-control form-control-fonatel" id="txtNombreVariable" placeholder="Nombre">
                    <small id="txtNombreVariableHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
            <div class="form-group row">
                <label for="txtNotasInformanteFormlulario" class="col-sm-12 col-form-label">Notas del Informante</label>
                <div class="col-sm-12">
                    <textarea class="form-control form-control-fonatel" id="txtNotasInformanteFormlulario" placeholder="Notas"></textarea>
                    <small id="txtNotasInformanteFormlularioHelp" class="form-text">@Etiquetas.CampoRequerido</small>
                </div>
            </div>


        </div>


    </div>
    <div class="row mt-4">
        <div class="col-lg-12 text-center">

            <button type="submit" id="btnGuardarVariable" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
            <button type="submit" class="btn btn-fonatel btn-danger">@Etiquetas.BotonCancelar</button>

        </div>
    </div>
</form>
