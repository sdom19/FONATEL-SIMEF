@using GB.SIMEF.Resources;
@model GB.SIMEF.Entities.DetalleFormularioWeb

<form>
    <div class="row">


        <div class="col-md-5 col-sm-12 col-md-offset-1">
            <div class="form-group row">
                <label for="ddlIndicadorFormulario" class="col-sm-12 col-form-label ">@EtiquetasViewFormulario.Indicador</label>
                <div class="col-sm-12">
                    <div class="select2-wrapper">
                        <div class="select2-wrapper">
                            @Html.DropDownListFor(model => model.idIndicador, new SelectList(ViewBag.Indicador, "Value","Text"), "Seleccione", new { @class = "listasDesplegables", id = "ddlIndicador" })
                        </div>
                    </div>
                    <small id="ddlIndicadorHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                </div>
            </div>


        </div>

        <div class="col-md-5 col-sm-12 col-md-offset-1">
            <div class="form-group row">
                <label for="txtTituloHoja" class="col-sm-12 col-form-label">@EtiquetasViewFormulario.TituloHoja</label>
                <div class="col-sm-12">
                    <input type="text" class="form-control form-control-fonatel alfa_numerico" maxlength="300" id="txtTituloHoja" placeholder=@EtiquetasViewFormulario.TituloHoja>
                    <small id="txtTituloHojaHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
        </div>

        <div class="col-md-10 col-md-offset-1 col-sm-12 col-sm-offset-0">
            <div class="form-group row">
                <label for="txtNotasEncargadoFormlulario" class="col-sm-12 col-form-label">@EtiquetasViewFormulario.NotasEncargado</label>
                <div class="col-sm-12">
                    <textarea class="form-control form-control-fonatel alfa_numerico" maxlength="3000" id="txtNotasEncargadoFormulario" placeholder=@EtiquetasViewFormulario.NotasEncargado></textarea>
                    <small id="txtNotasEncargadoFormularioHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-lg-12 text-center">

            <button type="submit" id="btnGuardarIndicadorFormulario" class="btn btn-fonatel btn-success-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonGuardar">@Etiquetas.BotonGuardar</button>
            <button type="submit" id="btnCancelarFormulario" class="btn btn-fonatel btn-danger" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonCancelar">@Etiquetas.BotonCancelar</button>

        </div>
    </div>
</form>
