@model List<GB.SUTEL.Entities.Indicador>
@using GB.SUTEL.UI.Helpers;
@if (ViewBag.Error != null)
{
    <div class="alert-danger">
        <span>@ViewBag.Error</span>
    </div>
}
    <form hidden method="post" action="@Url.Action("_tableIndicadores")" data-ajax="true" data-ajax-message="Cargando datos desde index...">
    @Html.AntiForgeryToken()
    <table class="display" cellspacing="0" data-table-grid="true" style="margin-top:3.5em">
        <thead>
            <tr>
                <th class="no-sort"></th>
                <th width="100%">Indicador</th>
            </tr>
        </thead>
        <tbody>
            @if(Model!=null){
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input name="INDICADORES" id="IId @item.IdIndicador" data-id="@item.IdIndicador" type="checkbox" />
                        </td>
                        <td><label for="IId @item.IdIndicador">@item.NombreIndicador</label></td>
                    </tr>
                }
            }
        </tbody>
        <tfoot>
            <tr>
                <td>
                    <input type="hidden" name="searchid" value="@(ViewBag.searchTerm[1] == null ? "" : ViewBag.searchTerm[1])"/>
                </td>
                <td>
                    <input placeholder="Indicador" name="Nombre" value="@(ViewBag.searchTerm[0] == null ? "" : ViewBag.searchTerm[0])" />
                </td>
            </tr>
        </tfoot>
    </table>
</form>