
@{
    ViewBag.Title = "Definición de Indicadores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container body-content">
    <div class="text-right">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                <li class="breadcrumb-item active" aria-current="page">Definición de Indicadores</li>
            </ol>
        </nav>
    </div>
    <div class="row card">
        <div class="col-lg-12">
            <h2 class="page-title-fonatel text-center">Definición de Indicadores</h2>
            <hr />
        </div>
        <div class="col-sm-12">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group center">
                        <label for="ddlGrupoIdicadorDefinicion" class="col-form-label">Grupo</label>
                        <div class="select2-wrapper">
                            <select class="listasDesplegables" id="ddlGrupoIdicadorDefinicion">
                                <option></option>
                                <option>Grupo 1</option>
                                <option>Grupo 2</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group center">
                        <label for="ddlTipoIndicadorDefinicion" class="col-form-label ">Tipo</label>
                        <div class="select2-wrapper">
                            <select class="form-control required listasDesplegables" id="ddlTipoIndicadorDefinicion">
                                <option></option>
                                <option>Tipo 1</option>
                                <option>Tipo 2</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-12 text-center">
                    <button class="btn btn-fonatel btn-info-fonatel">Buscar</button>
                </div>
            </div>
        </div>
      
    </div>


    <div class="row mt-5">
        <div class="col-md-12">
            <div class="col-lg-12 mt-4">
                @Html.Partial("_TablaIndicadores")
            </div>
        </div>
    </div>






</div>





