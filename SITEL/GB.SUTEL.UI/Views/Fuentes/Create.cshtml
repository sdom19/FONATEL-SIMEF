@using GB.SIMEF.Resources;
@model GB.SIMEF.Entities.FuenteRegistro

@{
    ViewBag.Title = ViewBag.titulo;
    Layout = "~/Views/Shared/_LayoutFONATEL.cshtml";
}

@section scripts {
    @*@Scripts.Render("~/bundles/FONATEL/Fuentes")*@
}

<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">@Etiquetas.LabelInicio</a></li>
                    <li class="breadcrumb-item active"><a href="/Fonatel/Fuentes/index">@EtiquetasViewFuentesRegistro.Fuente</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.titulo</li>
                </ol>
            </nav>
        </div>
    </div>
</div>


<div class="stepwizard">
    <div class="stepwizard-row setup-panel step_navigation_indicador">
        <div class="stepwizard-step" data-step="0">
            <p>@EtiquetasViewFuentesRegistro.Fuente</p>
            <a href="#step-1" disabled type="button" class="btn btn-circle">1</a>

        </div>
        <div class="stepwizard-step" data-step="1">
            <p>@EtiquetasViewFuentesRegistro.Destinatarios</p>
            <a href="#step-2" disabled type="button" class="btn btn-circle">2</a>

        </div>
    </div>
</div>


<div class="row stepwizard-content-container hidden" id="step-1">
    <div class="col-lg-12">
        <h2 class="page-title-fonatel text-center">@ViewBag.titulo</h2>
        <hr />
    </div>
    <div class="col-lg-12">

        @Html.Partial("_CrearFuente")
    </div>
</div>


<div class="row stepwizard-content-container hidden" id="step-2">
    <div>
        <h2 class="page-title-fonatel text-center">@EtiquetasViewFuentesRegistro.AgregarDestinatario</h2>
        <hr />
    </div>
    <div class="col-lg-12">
        @Html.Partial("_CrearDetalle")
    </div>
    <div class="col-lg-12 mt-4">
        @Html.Partial("_TablaDetalleFuentes")
    </div>

    <div class="col-sm-12 text-center">
        @if (Model.CantidadDestinatario > Model.DetalleFuenteRegistro.Count)
        {
            <button type="submit" disabled id="btnGuardarFuentesCompleto" class="btn btn-fonatel btn-info-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonFinalizar">@Etiquetas.BotonFinalizar</button>

        }
        else
        {
            <button type="submit" id="btnGuardarFuentesCompleto" class="btn btn-fonatel btn-info-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonFinalizar">@Etiquetas.BotonFinalizar</button>
        }

    </div>

    <div class="col-12 pull-right mt-4">
        <button type="button" id="btnAtrasFuentes" class="btn btn-fonatel btn-goback" aria-label="Left Align" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonAtras">
            <span aria-hidden="true"></span>@Etiquetas.BotonAtras
        </button>
    </div>
</div>

<script src="~/Scripts/Fonatel/JsFuentes.js"></script>