<h2>Fuente</h2>

<form>
    <div class="row mt-4">
        <div class="col-lg-12">
            <div class="justify-content-center">
                <div class="form-group row">
                    <label for="txtDescripcion" class="col-sm-3 col-form-label">Descripción</label>
                    <div class="col-sm-9">
                        <input type="text"  class="form-control" id="txtDescripcion"  placeholder="Descripción">
                        <small id="DescripcionHelp" class="form-text text-muted">La Descripción es requerida</small>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtFuente" class="col-sm-3 col-form-label">Código</label>
                    <div class="col-lg-9">
                        <input type="text"  class="form-control" id="txtFuente" placeholder="Fuente">
                        <small id="FuenteHelp" class="form-text text-muted">El Fuente es requerida</small>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="txtCantidad" class="col-sm-3 col-form-label">Cantidad de Destinatarios</label>
                    <div class="col-lg-9">
                        <input type="text" class="form-control" id="txtCantidad" placeholder="Cantidad de Destinatarios">
                        <small id="CantidadDetalleHelp" class="form-text text-muted">La Cantidad de Destinatarios es Requerida</small>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="Row">
        <div class="col-lg-12">
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="submit" class="btn btn-danger">Cancelar</button>
        </div>
    </div>
</form>

