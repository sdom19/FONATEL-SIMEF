@using GB.SIMEF.Resources;

<form>
    <div class="row">
            <div class="col-md-4 col-sm-10 col-md-offset-2 col-sm-offset-2">
                <div class="form-group row">
                    <label for="txtFuente" class="col-sm-12 col-form-label">Fuente</label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-fonatel " id="txtFuente" placeholder="Fuente">
                        <small id="FuenteHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>
             </div>
            <div class="col-md-6 col-sm-10 col-md-offset-0 col-sm-offset-2">
                <div class="form-group row">
                    <label for="txtCantidad" class="col-sm-12 col-form-label">Cantidad de Destinatarios</label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-fonatel " id="txtCantidad" placeholder="Cantidad de Destinatarios">
                        <small id="CantidadDetalleHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>
            </div>
        </div>
    <div class="row mt-5">
        <div class="col-sm-12 text-center">
            <button type="submit" id="btnGuardarFuente" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
            <button type="submit" id="btnSiguienteFuente" class="btn btn-fonatel btn-next-fonatel">@Etiquetas.BotonSiguiente</button>
            <button type="submit" class="btn btn-fonatel btn-error-fonatel">@Etiquetas.BotonCancelar</button>
        </div>
    </div>
</form>

