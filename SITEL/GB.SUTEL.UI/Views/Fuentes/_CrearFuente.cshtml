@using GB.SIMEF.Resources;
 @model GB.SIMEF.Entities.FuentesRegistro
<form>
    <div class="row">
        <div class="col-md-4 col-sm-10 col-md-offset-2 col-sm-offset-2">
            <div class="form-group row">
                <label for="txtFuente" class="col-sm-12 col-form-label">Fuente</label>
                <div class="col-sm-12">

                    @Html.EditorFor(model => model.Fuente, new { htmlAttributes = new { @class = "form-control form-control-fonatel solo_texto", placeholder = EtiquetasViewFuentesRegistro.FuentesRegistro, id = "txtFuente" } })
                    <small id="FuenteHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-10 col-md-offset-0 col-sm-offset-2">
            <div class="form-group row">
                <label for="txtCantidad" class="col-sm-12 col-form-label">Cantidad de Destinatarios</label>
                <div class="col-sm-12">

                    @Html.EditorFor(model => model.CantidadDestinatario, new { htmlAttributes = new { @class = "form-control form-control-fonatel", placeholder = EtiquetasViewFuentesRegistro.CantidadDestinatarios, id = "txtCantidad" } })


                    <small id="CantidadDetalleHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-sm-12 text-center">
            <button type="submit" id="btnGuardarFuente" class="btn btn-fonatel btn-success-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonGuardar">@Etiquetas.BotonGuardar</button>
            <button type="submit" id="btnSiguienteFuente" disabled class="btn btn-fonatel btn-next-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonSiguiente">@Etiquetas.BotonSiguiente</button>
            <button type="submit" id="btnCancelarFuente" class="btn btn-fonatel btn-error-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonCancelar">@Etiquetas.BotonCancelar</button>
        </div>
    </div>
</form>

