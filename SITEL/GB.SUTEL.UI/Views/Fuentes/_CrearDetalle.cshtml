<h2 class="text-primary">Agregar Destinatario</h2>


<form>
    <div class="row mt-5">

        <div class="col-lg-6 col-sm-12">
            <div class="form-group row">
                <label for="txtNombre" class="col-sm-2 col-form-label">Nombre</label>
                <div class="col-sm-10">
                    <input type="text" aria-label="Nombre de categoria" class="form-control" id="txtNombre" aria-describedby="Nombre categoria" placeholder="Nombre de categoria">
                    <small id="nombreHelp" class="form-text text-muted">El nombre es requerido</small>
                </div>
            </div>
        </div>

        <div class="col-lg-6 col-sm-12">
            <div class="justify-content-center">

                <div class="form-group row">
                    <label for="txtCorreo" class="col-sm-2 col-form-label">Correo</label>
                    <div class="col-lg-10">
                        <input type="email"  class="form-control" id="txtCorreo" placeholder="Correo Electrónico">
                        <small id="CorreoHelp" class="form-text text-muted">El Correo es requerido</small>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-lg-12 text-center">

            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="submit" class="btn btn-danger">Cancelar</button>

        </div>
    </div>
</form>
