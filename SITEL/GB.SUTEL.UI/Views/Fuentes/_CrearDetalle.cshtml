


<form>
    <div class="row">

        <div class="col-md-4 col-sm-9 col-md-offset-2 col-sm-offset-3">
            <div class="form-group row">
                <label for="txtNombre" class="col-sm-12 col-form-label">Nombre</label>
                <div class="col-sm-12">
                    <input type="text" aria-label="Nombre de categoria" class="form-control form-control-fonatel" id="txtNombre" aria-describedby="Nombre categoria" placeholder="Nombre de categoria">
                    <small id="nombreHelp" class="form-text form-text-danger-fonatel">El nombre es requerido</small>
                </div>
            </div>
        </div>

        <div class="col-md-5 col-sm-9 col-md-offset-0 col-sm-offset-3">
            <div class="justify-content-center">

                <div class="form-group row">
                    <label for="txtCorreo" class="col-sm-12 col-form-label">Correo</label>
                    <div class="col-lg-12">
                        <input type="email"  class="form-control form-control-fonatel" id="txtCorreo" placeholder="Correo Electrónico">
                        <small id="CorreoHelp" class="form-text form-text-danger-fonatel">El Correo es requerido</small>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="row mt-5">
        <div class="col-lg-12 text-center">

            <button type="submit" id="btnGuardarDestinatario" class="btn btn-fonatel btn-success-fonatel">Guardar</button>
            <button type="submit" class="btn btn-fonatel btn-error-fonatel">Cancelar</button>

        </div>
    </div>
</form>
