<h2>Categoría de Desagregación</h2>
<br />
<form>
    <div class="row">
        <div class="col-lg-6">
            <div class="justify-content-center">
                <div class="form-group row">
                    <label for="txtNombre" class="col-sm-3 col-form-label">Nombre</label>
                    <div class="col-sm-9">
                        <input type="text"  class="form-control" id="txtNombre"  placeholder="Nombre de categoria">
                        <small id="nombreHelp" class="form-text text-muted">El nombre es requerido</small>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtCodigo" class="col-sm-3 col-form-label">Código</label>
                    <div class="col-lg-9">
                        <input type="text"  class="form-control" id="txtCodigo" placeholder="Codigo">
                        <small id="CodigoHelp" class="form-text text-muted">El Código es requerido</small>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="txtCantidad" class="col-sm-3 col-form-label">Cantidad Detalle</label>
                    <div class="col-lg-9">
                        <input type="text" class="form-control" id="txtCantidad" placeholder="Cantidad Detalle">
                        <small id="CantidadDetalleHelp" class="form-text text-muted">La Cantidad de Detalle es Requerida</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group row">
                <label for="ddlTipoCategoria" class="col-sm-3 col-form-label ">Tipo Categoria</label>
                <div class="col-sm-9">
                    <select class="form-control required listasDesplegables" aria-label="Default select example" id="ddlTipoCategoria">
                        <option></option>
                        <option value="1">id único</option>
                        <option value="2">atributo</option>
                        <option value="3">actualizable</option>
                    </select>
                    <br />
                    <small id="TipoCategoriaHelp" class="form-text text-muted">El tipo es requerido</small>
                </div>
            </div>
            <div class="form-group row">
                <label for="ddlTipoDetalle" class="col-sm-3 col-form-label">Tipo Detalle</label>
                <div class="col-sm-9">
                    <select class="form-control required listasDesplegables" aria-label="Default select example" id="ddlTipoDetalle">
                        <option></option>
                        <option value="1">numérico</option>
                        <option value="2">alfanumérico</option>
                        <option value="3">texto</option>
                        <option value="4">fecha</option>
                    </select>
                    <br />
                    <small id="TipoCategoriaHelp" class="form-text text-muted">El detalle es requerido</small>
                </div>
            </div>

            <div class="form-group row">
                <label for="txtEtiquetaDetalle" class="col-sm-3 col-form-label">Etiqueta de detalle</label>
                <div class="col-lg-9">
                    <input type="text" class="form-control" id="txtEtiquetaDetalle" placeholder="Etiqueta de detalle">
                    <small id="txtEtiquetaDetalleHelp" class="form-text text-muted">El Etiqueta Detalle es requerido</small>
                </div>
            </div>
        </div>

    </div>
    <div class="Row">
        <div class="col-lg-12 text-center">
            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="submit" class="btn btn-danger">Cancelar</button>
        </div>
    </div>
</form>

