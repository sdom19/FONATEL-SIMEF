@using GB.SIMEF.Resources;

@model GB.SIMEF.Entities.CategoriaDesagregacion

@{
    ViewBag.Title = ViewBag.titulo;
    Layout = "~/Views/Shared/_LayoutFONATEL.cshtml";
}

@section scripts {
   @* @Scripts.Render("~/bundles/FONATEL/CategoriaDesagregacion")*@
}

<div class="container body-content">
    <div class="text-right">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action( "index","Home")">@Etiquetas.LabelInicio</a></li>
                <li class="breadcrumb-item active"><a href="@Url.Action( "index","CategoriasDesagregacion")">@EtiquetasViewCategorias.Categorias</a></li>
                <li class="breadcrumb-item active" aria-current="page">@EtiquetasViewCategorias.Vista</li>
            </ol>
        </nav>
    </div>
    <div class="row">

        <div class="col-lg-12">
            <h2 class="page-title-fonatel text-center">@EtiquetasViewCategorias.Vista</h2>
            <hr />

        </div>

        <div class="col-lg-12">
            @Html.Partial("_VisualizaCategoria", Model)
        </div>
            <div class="col-sm-12 text-center mt-2">
                <button type="submit" id="btnCancelarCategoria" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonCancelar" class="btn btn-fonatel btn-error-fonatel">@Etiquetas.BotonCancelar</button>
            </div>
        @if (Model.IdTipoDetalleCategoria == (int)Constantes.TipoDetalleCategoriaEnum.Texto || Model.IdTipoDetalleCategoria == (int)Constantes.TipoDetalleCategoriaEnum.Alfanumerico)
        {
            <div class="col-lg-12 mt-3">
                @Html.Partial("_TablaVisualizacionDetalleDesagregacion", Model)
            </div>
        }



    </div>

</div>
<script src="~/Scripts/Fonatel/JsCategoria.js"></script>