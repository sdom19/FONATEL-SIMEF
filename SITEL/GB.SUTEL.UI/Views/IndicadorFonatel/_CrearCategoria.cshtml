@using GB.SIMEF.Resources;

<form>
    <div class="row">

        <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">
            <div class="form-group row">
                <label for="ddlCategoriaIndicador" class="col-sm-12  col-form-label ">@EtiquetasViewIndicadorFonatel.CrearCategoria_LabelCategoriaIndicador</label>
                <div class="col-sm-12">
                    <div class="select2-wrapper">
                        <select class="listasDesplegables" aria-label="Default select example" id="ddlCategoriaIndicador">
                            <option></option>
                            <option value="1">Provincia</option>
                            <option value="2">Cantón</option>

                        </select>
                    </div>
                    <small id="ddlCategoriaHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
        </div>

        <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">
            <div class="form-group row">
                <label for="ddlCategoriaDetalleIndicador" class="col-sm-12  col-form-label ">@EtiquetasViewIndicadorFonatel.CrearCategoria_LabelDetalleIndicador</label>
                <div class="col-sm-12">
                    <div class="select2-wrapper">
                        <select class="listasDesplegables" multiple aria-label="Default select example" id="ddlCategoriaDetalleIndicador">
                            <option></option>
                            <option value="1">San jose</option>
                            <option value="2">Limón</option>
                            <option value="2">Cartago</option>

                            <option value="1">Guanacaste</option>
                            <option value="2">Heredía</option>
                            <option value="2">Puntarenas</option>
                        </select>

                    </div>
                    <small id="ddlCategoriaDetalleHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
        </div>


    </div>
    <div class="row mt-5">
        <div class="col-lg-12 text-center">

            <button type="submit" id="btnGuardarCategoria" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
            <button type="submit" class="btn btn-fonatel btn-error-fonatel">@Etiquetas.BotonCancelar</button>

        </div>
    </div>
</form>
