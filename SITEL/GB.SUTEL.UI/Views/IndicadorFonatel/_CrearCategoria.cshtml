@using GB.SIMEF.Resources;

@model GB.SIMEF.Entities.DetalleIndicadorCategoria

<form id="formCrearCategoria">
    <div class="row">

        <div class="col-md-6 col-sm-12">
            <div class="form-group center">
                <label for="ddlCategoriaIndicador" class="col-form-label ">@EtiquetasViewIndicadorFonatel.CrearCategoria_LabelCategoriaIndicador</label>
                <div class="select2-wrapper">
