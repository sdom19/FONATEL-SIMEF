                    </select>*@
                    @Html.DropDownListFor(model => model.IdCategoria, Enumerable.Empty<SelectListItem>(), "Seleccione", new { @class = "listasDesplegables", id = "ddlCategoriaIndicador" })
                </div>
                <small id="ddlCategoríaHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>
        </div>

        <div class="col-md-6 col-sm-12">
