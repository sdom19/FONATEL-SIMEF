@using GB.SIMEF.Resources;

@model GB.SIMEF.Entities.Indicador

<form id="formCrearCategoria">
    <div class="row">

        <div class="col-md-6 col-sm-12">
            <div class="form-group center">
                <label for="ddlCategoriaIndicador" class="col-form-label ">@EtiquetasViewIndicadorFonatel.CrearCategoria_LabelCategoriaIndicador</label>
                <div class="select2-wrapper">
                    <select class="listasDesplegables" id="ddlCategoriaIndicador">
                        <option></option>
                        <option value="1">Provincia</option>
                        <option value="2">Cantón</option>

                    </select>
                </div>
                <small id="ddlCategoríaHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>
        </div>

        <div class="col-md-6 col-sm-12">
            <div class="form-group center">
                <label for="ddlCategoriaDetalleIndicador" class="col-form-label ">@EtiquetasViewIndicadorFonatel.CrearCategoria_LabelDetalleIndicador</label>
                <div class="select2-wrapper">
                    <select class="listasDesplegables multiple-Select" multiple id="ddlCategoriaDetalleIndicador">
                        <option value="all">Todos</option>
                        <option value="1">San jose</option>
                        <option value="2">Limón</option>
                        <option value="2">Cartago</option>

                        <option value="1">Guanacaste</option>
                        <option value="2">Heredía</option>
                        <option value="2">Puntarenas</option>
                    </select>

                </div>
                <small id="ddlCategoriaDetalleIndicadorHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>
        </div>

    </div>
    <div class="row mt-5">
        <div class="col-lg-12 text-center">

            <button type="button" id="btnGuardarCategoria" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
            <button type="button" id="btnCancelarIndicador" class="btn btn-fonatel btn-error-fonatel">@Etiquetas.BotonCancelar</button>

        </div>
    </div>
</form>
