<h2 class="text-primary text-center" >Detalle Categoría de Desagregación</h2>

<br />
<form>
    <div class="row">

        <div class="col-md-6 col-sm-12">


            <div class="form-group row">
                <label for="ddlCategoriaIndicador" class="col-sm-4 col-form-label ">Categoría</label>
                <div class="col-sm-8">
                    <select class="form-control required listasDesplegables" aria-label="Default select example" id="ddlCategoriaIndicador">
                        <option></option>
                        <option value="1">CAT1-1</option>
                        <option value="2">CAT1-2</option>
                        <option value="3">CAT1-3</option>
                    </select>
                    <br />
                    <small id="ddlCategoriaHelp" class="form-text text-danger">La categoría es Requerida</small>
                </div>
            </div>


            <div class="form-group row">
                <label for="ddlVariableIndicador" class="col-sm-4 col-form-label ">Variable</label>
                <div class="col-sm-8">
                    <select class="form-control required listasDesplegables" aria-label="Default select example" id="ddlVariableIndicador">
                        <option></option>
                        <option value="1">Cantidad de torres</option>
                        <option value="2">Estado de torres</option>

                    </select>
                    <br />
                    <small id="ddlVariableHelp" class="form-text text-danger">La categoría es Requerida</small>
                </div>
            </div>





            <div class="form-group row">
                <label for="txtCodigoDetalle" class="col-sm-4 col-form-label">Código</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="txtCodigoDetalle" placeholder="Código">
                    <small id="txtCodigoDetalleHelp" class="form-text text-danger">El Código es Requerido</small>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-sm-12">
            <div class="form-group row">
                <label for="txtEtiquetaDetalle" class="col-sm-4 col-form-label">Etiqueta de detalle</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="txtEtiquetaDetalle" placeholder="Etiqueta de detalle">
                    <small id="txtEtiquetaDetalleHelp" class="form-text text-danger">El Etiqueta Detalle es requerido</small>
                </div>
            </div>
        </div>


    </div>
    <div class="row">
        <div class="col-lg-12 text-center">

            <button type="submit" class="btn btn-success">Guardar</button>
            <button type="submit" class="btn btn-danger">Cancelar</button>

        </div>
    </div>
</form>
