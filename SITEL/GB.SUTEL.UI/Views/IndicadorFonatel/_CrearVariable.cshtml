<h2 class="text-primary text-center" >Detalle Variables</h2>

<br />
<form>
    <div class="row">


        <div class="col-md-6 col-sm-12">
            <div class="form-group row">
                <label for="ddlVariableIndicador" class="col-sm-12  col-form-label ">Variable</label>
                <div class="col-sm-8">
                    <select class="form-control required listasDesplegables" aria-label="Default select example" id="ddlVariableIndicador">
                        <option></option>
                        <option value="1">Cantidad de torres</option>
                        <option value="2">Estado de torres</option>

                    </select>
                    <br />
                    <small id="ddlVariableHelp" class="form-text text-danger">La Variable es Requerida</small>
                </div>
            </div>
            <div class="form-group row">
                <label for="txtNombreVariable" class="col-sm-12  col-form-label">Nombre</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="txtNombreVariable" placeholder="Nombre">
                    <small id="txtNombreVariableHelp" class="form-text text-danger">El Nombre es requerido</small>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-sm-12">
            <div class="form-group row">
                <label for="txtDescripcionVariable" class="col-sm-12  col-form-label">Descripción</label>
                <div class="col-sm-8">
                    <textarea class="form-control textarea" maxlength="2000" id="txtDescripcionVariable" placeholder="Descripción"></textarea>
                    <small id="txtDescripcionVariableHelp" class="form-text text-danger">El Código es Requerido</small>
                </div>
            </div>
        </div>


    </div>
    <div class="row">
        <div class="col-lg-12 text-center">

            <button type="submit" id="btnGuardarVariable" class="btn btn-success">Guardar</button>
            <button type="submit" class="btn btn-danger">Cancelar</button>

        </div>
    </div>
</form>
