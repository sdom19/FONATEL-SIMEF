@using GB.SIMEF.Resources;
@model GB.SIMEF.Entities.RelacionCategoria

<form>
    <div class="row">
        <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">
            <div class="form-group row">
                <label for="ddlCategoriaDetalle" class="col-sm-12 col-form-label ">@EtiquetasViewRelacionCategoria.CategoriaAtributo</label>
                <div class="col-sm-12">
                    <div class="select2-wrapper">
                        <select class="listasDesplegables" id="ddlCategoriaDetalle">
                            <option></option>
                            <option>Provincia</option>
                        </select>
                    </div>
                    <small id="CategoriaDetalleHelp" class="form-text text-danger">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
        </div>
        <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">
            <div class="form-group row">
                <label for="ddlDetalleDesagregacionAtributo" class="col-sm-12 col-form-label">@EtiquetasViewRelacionCategoria.DetalleAtributo</label>
                <div class="col-sm-12">
                    <div class="select2-wrapper">
                        <select class="listasDesplegables" id="ddlDetalleDesagregacionAtributo">
                            <option></option>
                            <option>Cartago</option>
                            <option>San José</option>
                        </select>
                    </div>
                    <small id="DetalleDesagregacionAtributoHelp" class="form-text text-danger">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-lg-12 text-center">
            <div>
                <button id="btnGuardarDetalle" type="submit" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
                <button id="btnCancelarDetalle" type="submit" class="btn btn-fonatel btn-error-fonatel">@Etiquetas.BotonCancelar</button>
            </div>
        </div>
    </div>

</form>


