@using GB.SIMEF.Resources;
@model GB.SIMEF.Entities.RelacionCategoria




<div class="row">




        @{
            bool opcion = true;

            bool categoriaid = true;
        }


        @foreach (var item in Model.DetalleRelacionCategoria)
        {

            if (true)
            {
    <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">
        
        @if (categoriaid)
        {
            <div class="form-group row">
                <label for="ddlCategoriaDetalle" class="col-sm-12 col-form-label ">@Model.CategoriasDesagregacionid.NombreCategoria</label>
             
                        <div class="select2-wrapper">
                            <select class="listasDesplegables" id="dd_@Model.CategoriasDesagregacionid.idCategoria">
                                <option value="">Seleccione</option>
                                @if (Model.CategoriasDesagregacionid.idTipoDetalle == (int)Constantes.TipoDetalleCategoriaEnum.Numerico)
                                {
                                    for (int i = Model.CategoriasDesagregacionid.DetalleCategoriaNumerico.Minimo; i < Model.CategoriasDesagregacionid.DetalleCategoriaNumerico.Maximo; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }

                                }
                                else
                                {
                                    foreach (var cat in Model.CategoriasDesagregacionid.DetalleCategoriaTexto)
                                    {
                                        <option value="@cat.idCategoriaDetalle">@cat.Etiqueta</option>
                                    }
                                }


                            </select>


                        </div>
                    <small id="CategoriaDetalleHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
              
            </div>

            categoriaid = false;
        }


        <div class="form-group row">
            <label for="ddlCategoriaDetalle" class="col-sm-12 col-form-label ">@item.CategoriaAtributo.NombreCategoria</label>

            <div class="select2-wrapper">
                <select class="listasDesplegables" id="dd_@item.CategoriaAtributo.idCategoria">
                    <option value="">Seleccione</option>
                    @foreach (var cat in item.CategoriaAtributo.DetalleCategoriaTexto)
                    {
                        <option value="@cat.idCategoriaDetalle">@cat.Etiqueta</option>
                    }
                </select>
            </div>


        </div>
    </div>
                opcion = false;
            }
            else
            {
                <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">
                    <div class="form-group row">
                        <label for="ddlCategoriaDetalle" class="col-sm-12 col-form-label ">@item.CategoriaAtributo.NombreCategoria</label>
                        <div class="select2-wrapper">
                            <select class="listasDesplegables" id="dd_@item.CategoriaAtributo.idCategoria">
                                <option value="">Seleccione</option>
                                @foreach (var cat in item.CategoriaAtributo.DetalleCategoriaTexto)
                                {
                                    <option value="@cat.idCategoriaDetalle">@cat.Etiqueta</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                opcion = true;
            }


        }



        <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">

        </div>
    </div>




    <div class="row mt-5">
        <div class="col-lg-12 text-center">
            <div>
                <button id="btnGuardarDetalle" type="submit" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
                <button id="btnCancelarDetalle" type="submit" class="btn btn-fonatel btn-error-fonatel">@Etiquetas.BotonCancelar</button>
            </div>
        </div>
    </div>




