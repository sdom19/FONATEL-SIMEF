@using GB.SIMEF.Resources;
@model GB.SIMEF.Entities.RelacionCategoria
<form>
    <input type="hidden" id="txtidRelacion" />
    <div class="row">

        <div class="col-md-4 col-sm-9 col-md-offset-4 col-sm-offset-3">
            <div class="form-group row">
                <label for="ddlCategoriaDetalle" class="col-sm-12 col-form-label ">@EtiquetasViewRelacionCategoria.CategoriaAtributo</label>
                <div class="col-sm-12">
                    <div class="select2-wrapper">

                        @Html.DropDownListFor(model => model.idCategoria, new SelectList(ViewBag.ListaCatergorias, "idCategoria", "NombreCategoria"), "Seleccione", new { @class = "listasDesplegables", id = "ddlCategoriaDetalle" })

                    </div>
                    <small id="CategoriaDetalleHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
        </div>

    </div>
    <div class="row mt-5">
        <div class="col-lg-12 text-center">
            @*@if (Model.CantidadDestinatario > Model.DetalleFuentesRegistro.Count)
            {*@
                <button type="submit" id="btnGuardarCategoriaId" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
            @*}
            else
            {
                <button type="submit" disabled id="btnGuardarDestinatario" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
            }*@

            <button type="submit" id="btnCancelarRelacionCategoria" class="btn btn-fonatel btn-error-fonatel">@Etiquetas.BotonCancelar</button>

        </div>
    </div>
</form>
