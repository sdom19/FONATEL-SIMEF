@using GB.SIMEF.Resources;
@model GB.SIMEF.Entities.RelacionCategoria
@{
    ViewBag.Title = "Detalle Relaciones entre Categorías";
    Layout = "~/Views/Shared/_LayoutFONATEL.cshtml";
}

@section scripts {
    @*@Scripts.Render("~/bundles/FONATEL/RelacionCategoria")*@
}

<div class="container body-content">

    <div class="text-right">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">@Etiquetas.LabelInicio</a></li>
                <li class="breadcrumb-item"><a href="/RelacionCategoria">@EtiquetasViewRelacionCategoria.RelacionCategoria</a></li>
                <li class="breadcrumb-item active" aria-current="page">@EtiquetasViewRelacionCategoria.DetalleRelacionCategoria</li>
            </ol>
        </nav>
    </div>

    <div id="FormularioDetalle" class="row">
        <!-- TEXTO PARA ENCRIPTAR ID Y PARA EL EDITAR-->
        @Html.HiddenFor(model => model.id, new { id = "txtidRelacion" })
        <div>
            <h2 class="page-title-fonatel text-center">@EtiquetasViewRelacionCategoria.DetalleRelacionCategoria</h2>
            <hr />
        </div>
        <div class="col-lg-12">
            @Html.Partial("_CrearDetalle")
        </div>
        <div class="col-lg-12 ">
            <br />
            @Html.Partial("_TablaDetalleRelacionCategoria")
        </div>
    </div>

</div>

<script src="~/Scripts/Fonatel/JsRelacionCategoria.js"></script>