@using GB.SIMEF.Resources;
@model GB.SIMEF.Entities.RelacionCategoria


    <!--   TEXTO PARA SABER EL MODO AGREGAR O EDITAR -->
    @Html.Hidden("txtmodoRelacion", (string)ViewBag.Modo)

    <!-- TEXTO PARA ENCRIPTAR ID Y PARA EL EDITAR-->
    @Html.HiddenFor(model => model.id, new { id = "txtidRelacion" })

    <div class="row">
        <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">


            <div class="form-group row">
                <label for="txtNombre" class="col-sm-12 col-form-label">@EtiquetasViewRelacionCategoria.NombreRelacion</label>
                <div class="col-sm-12">
                    @Html.EditorFor(model => model.Nombre , new { htmlAttributes = new { @class = "form-control form-control-fonatel alfa_numerico", placeholder = EtiquetasViewRelacionCategoria.Nombre, id = "txtNombre" } })
                    <small id="nombreHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
            <div class="form-group row">
                <label for="txtCodigo" class="col-sm-12 col-form-label">Código</label>
                <div class="col-lg-12">
                    @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control form-control-fonatel alfa_numerico", placeholder = EtiquetasViewRelacionCategoria.Codigo, id = "txtCodigo" } })
                    <small id="CodigoHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                </div>
            </div>

            <div class="form-group row">
                <label for="txtCantidad" class="col-sm-12 col-form-label">@EtiquetasViewRelacionCategoria.Cantidad</label>
                <div class="col-sm-12">
                    @Html.EditorFor(model => model.CantidadCategoria, new { htmlAttributes = new { @class = "form-control form-control-fonatel solo_numeros", placeholder = EtiquetasViewRelacionCategoria.Cantidad, id = "TxtCantidad" } })
                    <small id="CantidadHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
        </div>
        <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">

            <div class="form-group row">
                <label for="ddlCategoriaId" class="col-sm-12 col-form-label ">Categoría ID</label>
                <div class="col-sm-12">
                    <div class="select2-wrapper">
                        @Html.DropDownListFor(model => model.idCategoria, new SelectList(ViewBag.ListaCatergoriaIdUnico, "Value", "Text"), "Seleccione", new { @class = "listasDesplegables", id = "ddlCategoriaId" })
                    </div>
                    <small id="TipoCategoriaHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
             
            <div class="form-group row">
                <label for="ddlDetalleDesagregacionId" class="col-sm-12 col-form-label ">Detalle Desagregación ID</label>
                <div class="col-sm-12">
                    <div class="select2-wrapper">

                        @Html.DropDownListFor(model => model.idCategoriaValor, new SelectList(ViewBag.ListaCatergoriaValor, "Value", "Text"), "Seleccione", new { @class = "listasDesplegables", id = "ddlDetalleDesagregacionId" })

                    </div>

                    <small id="DetalleDesagregacionIDHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 text-center">

            <button type="submit" id="btnGuardarRelacion" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonGuardar" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
            <button type="submit" id="btnCancelarRelacion" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonCancelar" class="btn btn-fonatel btn-error-fonatel">@Etiquetas.BotonCancelar</button>

        </div>
    </div>


