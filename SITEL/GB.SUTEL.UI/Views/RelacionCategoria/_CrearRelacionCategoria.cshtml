@using GB.SIMEF.Resources;
@model GB.SIMEF.Entities.RelacionCategoria

<form>
    <div class="row">
        <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">


                <div class="form-group row">
                    <label for="txtNombre" class="col-sm-12 col-form-label">Nombre</label>
                    <div class="col-sm-12">
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control form-control-fonatel alfa_numerico", placeholder = EtiquetasViewRelacionCategoria.Nombre, id = "txtNombre" } })
                        <small id="nombreHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtCodigo" class="col-sm-12 col-form-label">Código</label>
                    <div class="col-lg-12">
                        @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control form-control-fonatel alfa_numerico", placeholder = EtiquetasViewRelacionCategoria.Codigo, id = "txtCodigo" } })
                        <small id="CodigoHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="txtCantidad" class="col-sm-12 col-form-label">Cantidad Atributos</label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-fonatel " id="TxtCantidad" placeholder="Cantidad Atributos">
                        <small id="CantidadHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>
            </div>
        <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">

                <div class="form-group row">
                    <label for="ddlCategoriaId" class="col-sm-12 col-form-label ">Categoría ID</label>
                    <div class="col-sm-12">
                        <div class="select2-wrapper">
                            @Html.DropDownListFor(model => model.idCategoria, new SelectList(ViewBag.ListaCatergoriaIdUnico, "idCategoria", "NombreCategoria"), "Seleccione", new { @class = "listasDesplegables", id = "ddlCategoriaId" })
                        </div>
                        <small id="TipoCategoriaHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>


                <div class="form-group row">
                    <label for="ddlDetalleDesagregacionId" class="col-sm-12 col-form-label ">Detalle Desagregación ID</label>
                    <div class="col-sm-12">
                        <div class="select2-wrapper">
                     <select class="form-control form-control-fonatel  required listasDesplegables" aria-label="Default select example" id="ddlDetalleDesagregacionId">
                            <option></option>
                            </select>
                        </div>   
                        <small id="DetalleDesagregacionIDHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>
        </div>
        </div>
    <div class="row">
        <div class="col-lg-12 text-center">

            <button type="submit" id="btnGuardarRelacion" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonGuardar" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
            <button type="submit" id="btnCancelarRelacion" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonCancelar" class="btn btn-fonatel btn-error-fonatel">@Etiquetas.BotonCancelar</button>

        </div>
    </div>
</form>

