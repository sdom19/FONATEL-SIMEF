
<h2 class="text-primary text-center">Crear Relaciones entre Categorías</h2>

<form>
    <div class="row mt-4">
        <div class="col-lg-6 col-md-12">
            <div class="justify-content-center">


                <div class="form-group row">
                    <label for="txtNombre" class="col-sm-12 col-form-label">Nombre</label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control" id="txtNombre" placeholder="Nombre de Categoría">
                        <small id="nombreHelp" class="form-text text-danger">El Nombre es Requerido</small>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtCodigo" class="col-sm-12 col-form-label">Código</label>
                    <div class="col-lg-8">
                        <input type="text" aria-label="Código de categoria" class="form-control" id="txtCodigo" placeholder="Código">
                        <small id="CodigoHelp" class="form-text text-danger">El Código es Requerido</small>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="txtCantidad" class="col-sm-12 col-form-label">Cantidad Atributos</label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control" id="TxtCantidad" placeholder="Cantidad Atributos">
                        <small id="CantidadHelp" class="form-text text-danger">La Cantidad Atributos es Requerida</small>
                    </div>
                </div>


            </div>
            </div>
        <div class="col-lg-6 col-md-12">
            <div class="justify-content-center">

                <div class="form-group row">
                    <label for="ddlCategoriaId" class="col-sm-12 col-form-label ">Categoría ID</label>
                    <div class="col-sm-12">
                        <select class="form-control required listasDesplegables" aria-label="Default select example" id="ddlCategoriaId">
                            <option></option>
                        </select>
                        <br />
                        <small id="TipoCategoriaHelp" class="form-text text-danger">El Tipo es Requerido</small>
                    </div>
                </div>


                <div class="form-group row">
                    <label for="ddlDetalleDesagregacionId" class="col-sm-12 col-form-label ">Detalle Desagregación ID</label>
                    <div class="col-sm-12">
                        <select class="form-control required listasDesplegables" aria-label="Default select example" id="ddlDetalleDesagregacionId">
                            <option></option>
                        </select>
                        <br />
                        <small id="DetalleDesagregacionIDHelp" class="form-text text-danger">El Detalle Desagregación ID es Requerido</small>
                    </div>
                </div>
            </div>
        </div>
        </div>
    <div class="row">
        <div class="col-lg-12 text-center">

            <button type="submit" id="btnGuardarRelacion" data-toggle="tooltip" data-placement="top" title="Guardar" class="btn btn-success">Guardar</button>
            <button type="submit"  data-toggle="tooltip" data-placement="top" title="Cancelar" class="btn btn-danger">Cancelar</button>

        </div>
    </div>
</form>

