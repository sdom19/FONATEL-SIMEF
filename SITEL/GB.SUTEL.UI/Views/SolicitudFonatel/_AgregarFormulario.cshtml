@using GB.SIMEF.Resources;
@model GB.SIMEF.Entities.Solicitud

<form id="AgregarFormulario">

    <div class="row">
        <div class="col-md-12 col-sm-12">

            <div class="form-group center">
                <label for="ddlVariableIndicador" class="col-form-label">@EtiquetasViewSolicitudes.Formulario</label>
                <div class="select2-wrapper">
                    @Html.DropDownList("ddlFormularioWeb", new SelectList(ViewBag.ListaFormularioWeb, "Value", "Text"), "Seleccione", new { @class = "listasDesplegables", id = "ddlFormularioWeb" })
                </div>
                <small id="ddlVariableIndicadorHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
            </div>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-lg-12 text-center">

                @if (Model != null && Model.CantidadFormularios <= Model.FormularioWeb.Count)
                {
                    <button type="submit" id="btnGuardarFormulario" disabled class="btn btn-fonatel btn-success-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonGuardar">@Etiquetas.BotonGuardar</button>
                }
                else
                {
                    <button type="submit" id="btnGuardarFormulario" class="btn btn-fonatel btn-success-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonGuardar">@Etiquetas.BotonGuardar</button>
                }
            

           
            <button id="btnCancelarSolicitud" type="submit" class="btn btn-fonatel btn-error-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonCancelar">@Etiquetas.BotonCancelar</button>
        </div>
    </div>
</form>
