@using GB.SIMEF.Resources;

<form>
    <div class="row mt-5">
        <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">
            <div class="justify-content-center">



                <div class="form-group row">
                    <label for="txtCodigo" class="col-sm-12 col-form-label">Código</label>
                    <div class="col-sm-12">
                        <input type="text" aria-label="Código de categoria" class="form-control form-control-fonatel  " id="txtCodigo" placeholder="Código">
                        <small id="CodigoHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="txtNombre" class="col-sm-12 col-form-label">Nombre</label>
                    <div class="col-sm-12">
                        <input type="text" class="form-control form-control-fonatel  " id="txtNombre" placeholder="Nombre">
                        <small id="nombreHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="txtFechaInicio" class="col-sm-12 col-form-label">Fecha de Inicio</label>
                    <div class="col-sm-12">
                        <input type="date" class="form-control form-control-fonatel  " id="TxtFechaInicio">
                        <small id="FechaInicioHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>


                <div class="form-group row">
                    <label for="ddlMesSolicitud" class="col-sm-12 col-form-label ">Mes</label>
                    <div class="select2-wrapper">
                        <div class="col-sm-12">
                            <select  class="listasDesplegables" id="ddlMesSolicitud">
                                <option></option>
                                <option>Enero</option>
                                <option>Febrero</option>
                                <option>Marzo</option>
                                <option>Abril</option>
                            </select>
                        </div>
                        <small id="ddlMesSolicitudHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>

            </div>
          </div>
        <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">
            <div class="justify-content-center">


                <div class="form-group row">
                    <label for="ddlFuentes" class="col-sm-12 col-form-label ">Fuentes</label>
                    <div class="col-sm-12">
                        <div class="select2-wrapper">
                            <select  class="listasDesplegables" id="ddlFuentes">
                                <option></option>
                                <option>Fuentes 1</option>
                                <option>Fuentes 2</option>
                                <option>Fuentes 3</option>
                            </select>
                        </div>
                        <small id="FuentesHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>



                <div class="form-group row">
                    <label for="ddlFormularios" class="col-sm-12 col-form-label ">Formulario</label>
                    <div class="select2-wrapper">
                        <div class="col-sm-12">
                            <select  class="listasDesplegables" id="ddlFormularios" multiple>
                                <option></option>
                                <option>Formulario 1</option>
                                <option>Formulario 2</option>
                                <option>Formulario 3</option>
                            </select>
                        </div>
                        <small id="FormulariosHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="txtFechaFin" class="col-sm-12 col-form-label">Fecha Final</label>
                    <div class="col-sm-12">
                        <input type="date" class="form-control form-control-fonatel  " id="TxtFechaFin">
                        <small id="FechaFinHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>




                <div class="form-group row">
                    <label for="ddlAnoSolicitud" class="col-sm-12 col-form-label ">Año</label>
                    <div class="select2-wrapper">
                        <div class="col-sm-12">
                            <select class="listasDesplegables" id="ddlAnoSolicitud">
                                <option></option>
                                <option>2019</option>
                                <option>2020</option>
                                <option>2021</option>
                                <option>2022</option>
                            </select>
                        </div>
                        <small id="ddlAnoSolicitudHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                    </div>
                </div>

            </div>
        </div>

        <div class="col-md-10 col-md-offset-1 col-sm-12 col-sm-offset-0 " >
            <div class="form-group row">
                <label for="txtMensajeSolicitud" class="col-sm-12 col-form-label">Mensaje</label>
                <div class="col-sm-12">
                    <textarea id="txtMensajeSolicitud" class="form-control form-control-fonatel" placeholder="Mensaje"></textarea>
                    <small id="txtMensajeSolicitudHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                </div>
            </div>
        </div>
     </div>
    <div class="row">

        <div class="col-lg-12 text-center">

            <button type="submit" id="btnGuardarSolicitud" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
            <button type="submit" class="btn btn-fonatel btn-error-fonatel">@Etiquetas.BotonCancelar</button>

        </div>
    </div>
</form>

