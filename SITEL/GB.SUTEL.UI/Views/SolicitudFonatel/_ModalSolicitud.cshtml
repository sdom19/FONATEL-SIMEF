@using GB.SIMEF.Resources;
@model GB.SIMEF.Entities.SolicitudEnvioProgramado

<div class="modal fade modal-fonatel" data-backdrop="static" id="modalEnvio" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-fonatel" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" data-toggle="tooltip" data-placement="top" title="Cerrar"></button>
                <h5 class="modal-title">@EtiquetasViewSolicitudes.ProgramarEnvio</h5>

            </div>
            <div class="modal-body">
                @Html.HiddenFor(model => model.id, new { id = "txtSolicitudEnvio" })

                <input type="hidden" id="idSolicitudProgramacion" name="custId" value="">

                <div class="form-group center">
                    <label for="txtSolicitudModal" class="col-form-label">@EtiquetasViewSolicitudes.Solicitudes</label>
                    @*@Html.EditorFor(model => model.IdSolicitud, new { htmlAttributes = new { @class = "form-control form-control-fonatel alfa_numerico", @maxlength = "30", placeholder = EtiquetasViewSolicitudes.Codigo, id = "txtSolicitudModal" } })*@
                    <input type="text" class="form-control form-control-fonatel disabled" id="txtSolicitudModal">
                </div>

                <div class="form-group center">
                    <label for="ddlFrecuencia" class="col-form-label">@EtiquetasViewSolicitudes.Frecuencia</label>
                    <div class="select2-wrapper">
                        @Html.DropDownListFor(model => model.IdFrecuenciaEnvio, new SelectList(ViewBag.ListaFrecuencia, "idFrecuenciaEnvio", "Nombre"), "Seleccione", new { @class = "listasDesplegables", id = "ddlFrecuencia" })
                    </div>
                    <small id="ddlFrecuenciaHelp" hidden class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                </div>

                <div class="form-group center">
                    <label for="txtCantidadRepeticiones" class="col-form-label">Cantidad de Repeticiones</label>
                    @Html.EditorFor(model => model.CantidadRepeticion, new { htmlAttributes = new { @class = "form-control form-control-fonatel solo_numeros", @maxlength = "30", placeholder = EtiquetasViewSolicitudes.CantidadRepeticiones, id = "txtCantidadRepeticiones" } })
                    <small id="txtRepeticionesSolicitudesHelp" hidden class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                </div>
                <div class="form-group center">
                    <label for="txtFechaCiclo" class="col-form-label">Fecha de Inicio del Ciclo</label>
                    @Html.EditorFor(model => model.FechaCiclo, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control form-control-fonatel", placeholder = EtiquetasViewSolicitudes.FechaCiclo, id = "txtFechaCiclo" } })
                    <small id="txtFechaEnvioSolicitudHelp" hidden class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                </div>

            </div>
            <div class="modal-footer">
                <div class="text-center">
                    <button type="submit" id="btnGuardarSolicitudEnvio" class="btn btn-fonatel btn-success-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonGuardar">@Etiquetas.BotonGuardar</button>
                    <button type="submit" id="btnEliminarSolicituProgramardEnvio" class="btn btn-fonatel btn-warning-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonEliminar">@Etiquetas.BotonEliminar</button>
                    <button type="submit" id="btnCancelarSolicitudEnvio" class="btn btn-fonatel btn-error-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonCancelar">@Etiquetas.BotonCancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>
