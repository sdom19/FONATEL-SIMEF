@model GB.SUTEL.Entities.Frecuencia



    <form id="formEditar" method="post"
          data-ajax="true" action="@Url.Action("Editar")"
          data-ajax-message="Modificando Frecuencia...">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="modal fade" id="modalEditarFrecuencia">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Modificar Frecuencia</h4>
                    </div>
                    <div class="modal-body">

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                @Html.LabelFor(model => model.NombreFrecuencia, new { @class = "col-md-4 control-label" })
                                <div class="col-sm-8">
                                    @Html.HiddenFor(model => model.IdFrecuencia, new { @id = "IdFrecuencia" })
                                    @Html.EditorFor(model => model.NombreFrecuencia, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre", @id = "txtFrecuencia" } })



                                    @Html.ValidationMessageFor(model => model.NombreFrecuencia, "", new { @class = "text-danger" })

                                </div>

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.CantidadMeses, new { @class = "col-md-4 control-label" })
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.CantidadMeses, new { htmlAttributes = new { @id = "txtCantidadMeses", @class = "form-control" } })<br />
                                    @Html.ValidationMessageFor(model => model.CantidadMeses, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <br />
                            <div class="alert alert-danger hidden" role="alert" id="divMensajeErrorEditarFrecuencia">
                                <span id="MierrorMensaje"></span>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Guardar Cambios" class="btn btn-success" title="Guardar Cambios" alt="Guardar Cambios" />
                        <button type="button" class="btn btn-danger" data-dismiss="modal" title="Cancelar">Cancelar</button>                        
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </form>
