@model GB.SUTEL.UI.Models.DetalleAgrupacionViewModels
@{
    ViewBag.Title = "Detalle de Agrupación";
}

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Mantenimientos/DetalleAgrupacion.js")"></script>
}

<h4>Detalle de Agrupación</h4>

<br />

<!-- Small modal -->
@if (GB.SUTEL.UI.Helpers.rolValidation.ValidateScreenFunctions(this.Context, "Detalle de Agrupación", "Crear"))
{
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modalCrearDetalle">Nuevo</button>
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modalDetalleAgrupacionDescargar"
            data-select="true" data-tooltip="true" title="Generar plantilla">
        Generar plantilla
    </button>
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modalCargarExcel"
            data-tooltip="true" title="Cargar plantilla">
        Cargar plantilla
    </button><p></p>
}

<div class="alert alert-danger hidden" role="alert" id="divMensajeErrorExcel">
    <span id="MyerrorMensaje"></span>
</div>

@if (GB.SUTEL.UI.Helpers.rolValidation.ValidateScreenFunctions(this.Context, "Detalle de Agrupación", "Consultar"))
{
    <div id="vistaDetalle">

        <script>
            $("body").append("<div class='darkScreen' hidden><div class='img-waiter'></div></div>");
            $(".darkScreen").fadeIn(500);

        </script>
        @{Html.RenderPartial("_table");}
        <script>

            $(".darkScreen").fadeOut(1000, function () {
                $(this).remove();
            });
        </script>
    </div>
}
@{Html.RenderPartial("Crear");}

@{Html.RenderPartial("CargarExcel");}

@{Html.RenderPartial("DescargarExcel");}

@if (GB.SUTEL.UI.Helpers.rolValidation.ValidateScreenFunctions(this.Context, "Detalle de Agrupación", "Editar"))
{
    { Html.RenderPartial("Editar", Model); }
}

@{Html.RenderPartial("Eliminar", Model);}



