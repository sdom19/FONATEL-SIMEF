@model GB.SUTEL.UI.Models.DetalleAgrupacionViewModels

<form id="formEditar" method="post"
      data-ajax="true" action="@Url.Action("Editar")"
      data-ajax-message="Actualizando Detalle Agrupación...">




    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="modal fade" id="modalEditarDetalle">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Editar Detalle Agrupación</h4>
                </div>
                <div class="modal-body">

                    <div class="form-horizontal">

                        <div class="form-group">
                            @Html.HiddenFor(model => model.itemDetalleAgrupacion.IdDetalleAgrupacion, new { @id = "IdDetalleAgrupacion" })
                            @Html.LabelFor(model => model.itemDetalleAgrupacion.IdAgrupacion, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.itemDetalleAgrupacion.IdAgrupacion, (List<SelectListItem>)ViewBag.listaAgrupaciones, new { @id = "IdAgrupacion", @class = "form-control", style = "width:100%", @disabled = "true" })
                                <br />
                                @Html.ValidationMessageFor(model => model.itemDetalleAgrupacion.IdAgrupacion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.itemDetalleAgrupacion.IdOperador, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(model => model.itemDetalleAgrupacion.IdOperador, (List<SelectListItem>)ViewBag.listaOperadores, new { @id = "IdOperador", @class = "form-control", style = "width:100%", @disabled = "true" })
                                <br />
                                @Html.ValidationMessageFor(model => model.itemDetalleAgrupacion.IdOperador, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.itemDetalleAgrupacion.DescDetalleAgrupacion, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.itemDetalleAgrupacion.DescDetalleAgrupacion, new { htmlAttributes = new { @class = "form-control", @placeholder = "Codigo", @id = "txtDetalle" } })
                                <br />
                                @Html.ValidationMessageFor(model => model.itemDetalleAgrupacion.DescDetalleAgrupacion, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <br />
                        <div class="alert alert-danger hidden" role="alert" id="divMensajeErrorEditarDetalle">
                            <span id="MyerrorMensaje"></span>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="submit" value="Guardar Cambios" class="btn btn-success" alt="Guardar Cambios" title="Guardar Cambios" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal" title="Cancelar">Cancelar</button>                    
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</form>
