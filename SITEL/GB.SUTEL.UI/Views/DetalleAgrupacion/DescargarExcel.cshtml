<div class="modal fade" id="modalDetalleAgrupacionDescargar">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Generar plantilla</h4>
            </div>
            <div class="modal-body">

                <div class="form-horizontal">

                    <div class="form-group">

                        <div class="col-sm-11">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label for="txtNombreFile" class="col-sm-4 control-label">Nombre del archivo</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="txtNombreFile" placeholder="Nombre" value="Plantilla">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal" id="btnDescargarExcelDetalle" onclick="descargarExcelDetalle()">Descargar plantilla</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script type="text/javascript">

    function descargarExcelDetalle() {
        var detalleNombreExcel = $("#txtNombreFile").val();

        if (detalleNombreExcel == "" || detalleNombreExcel == null) {
            detalleNombreExcel = "Plantilla";
        }

        window.open("/DetalleAgrupacion/GenerarExcel?detalleAgrupacionNombreExcel=" + detalleNombreExcel, '_blank');
    }

    $('#modalDetalleAgrupacionDescargar').on('show.bs.modal', function (event) {
        $("#txtNombreFile").val("Plantilla");
    });
</script>

