<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
<link href="~/Content/bootstrap-select.min.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="~/Scripts/Multiselect/bootstrap-multiselect.js"></script>


@model GB.SUTEL.UI.Models.SolicitudViewModels


<form id="formActualizarFechas" method="post"
      action="@Url.Action("ActualizarFechas")" data-ajax="true"
      data-ajax-message="Actualizando Solicitud Indicador...">

    @Html.Hidden("ItemActualizar", "", new { @id = "ItemActualizar" })
    <div class="modal fade" id="modalActualizarFecha">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Actualizar fechas de Solicitud Indicador</h4>
                </div>
                <div class="modal-body">

                    <div class="form-horizontal">
                        <br />
                        <div class="form-group">
                            @Html.LabelFor(model => model.itemSolicitudIndicador.FechaInicio, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.itemSolicitudIndicador.FechaInicio, "{0:dd/MM/yyyy}", new { @Id = "FechaInicioAc", @class = "form-control datefield", @readonly = "readonly" })
                                <br />
                                @Html.ValidationMessageFor(model => model.itemSolicitudIndicador.FechaInicio, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.itemSolicitudIndicador.FechaFin, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.itemSolicitudIndicador.FechaFin, "{0:dd/MM/yyyy}", new { @Id = "FechaFinAc", @class = "form-control datefield", @readonly = "readonly" })
                                <br />
                                @Html.ValidationMessageFor(model => model.itemSolicitudIndicador.FechaFin, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div class="alert alert-danger hidden" role="alert" id="divMensajeErrorActulizarFecha">
                            <span id="errorMensajeActualizarFecha"></span>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                   

                    <!--<button type="submit" class="btn btn-success" data-toggle="tooltip" id="buttonGuardar">Guardar cambios</button>-->
                    <input type="submit" id="mySubmit" value="Guardar cambios" class="btn btn-success" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

</form>


