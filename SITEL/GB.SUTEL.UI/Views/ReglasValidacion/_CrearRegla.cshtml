@using GB.SIMEF.Resources;
@model GB.SIMEF.Entities.ReglaValidacion



@Html.Hidden("txtmodo", (string)ViewBag.Modo)
@Html.Hidden("txtEstado", Model.idEstado)

<form id="formularioReglas" class="mt-5">
    <div class="row">
        <div class="col-md-4 col-sm-12">

            <div class="form-group">
                <label for="txtCodigo" class="col-form-label">@EtiquetasViewReglasValidacion.LabelCodigo</label>
                @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control form-control-fonatel alfa_numerico", @maxlength = "30", placeholder = EtiquetasViewReglasValidacion.LabelCodigo, id = "txtCodigo" } })
                <small id="CodigoHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
            </div>
        </div>
        <div class="col-md-4 col-sm-12">

            <div class="form-group">
                <label for="txtNombre" class="col-form-label">@EtiquetasViewReglasValidacion.LabelNombre</label>
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control form-control-fonatel solo_texto", maxlength = "300", placeholder = EtiquetasViewReglasValidacion.LabelNombre, id = "txtNombre" } })
                <small id="nombreHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
            </div>
        </div>

        <div class="col-md-4 col-sm-12">

            <div class="form-group">
                <label for="ddlIndicadorRegla" class="col-form-label">@EtiquetasViewReglasValidacion.LabelIndicador</label>
                <div class="select2-wrapper">
                    @Html.DropDownListFor(model => model.idIndicadorString, new SelectList(ViewBag.ListaIndicadores, "Value", "Text"), "Seleccione", new { @class = "listasDesplegables", id = "ddlIndicadorRegla" })
                </div>
                <small id="TipoIndicadorHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label for="txtDescripcionRegla" class="col-form-label">@EtiquetasViewReglasValidacion.LabelDescripcion  </label>
                @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control form-control-fonatel textarea", maxlength = "3000", placeholder = EtiquetasViewReglasValidacion.LabelDescripcion, id = "txtDescripcionRegla" })
                <small id="DescripcionReglaHelp" class="form-text form-text-danger-fonatel hidden">@Etiquetas.CampoRequerido</small>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 text-center mt-5">
            <button type="submit" id="btnGuardarRegla" class="btn btn-fonatel btn-success-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonGuardar">@Etiquetas.BotonGuardar</button>
            <button type="submit" id="btnSiguienteRegla" class="btn btn-fonatel btn-next-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonSiguiente" disabled>@Etiquetas.BotonSiguiente</button>
            <button type="submit" id="btnCancelarRegla" class="btn btn-fonatel btn-error-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonCancelar">@Etiquetas.BotonCancelar</button>
        </div>
    </div>

</form>

