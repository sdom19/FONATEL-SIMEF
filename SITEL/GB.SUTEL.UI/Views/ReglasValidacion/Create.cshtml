
@{
    ViewBag.Title = "Reglas de Validación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container body-content">
    <div class="row">
        <div class="col-sm-12">
            <div class="text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                        <li class="breadcrumb-item active"><a href="/Fonatel/ReglasValidacion/index">Reglas de Validación</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Crear Regla de Validación</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>


    <div class="stepwizard col-sm-offset-3">
        <div class="stepwizard-row setup-panel step_navigation_Regla">
            <div class="stepwizard-step">
                <p>Regla</p>
                <a href="#step-1" type="button" class="btn btn-circle btn-info-fonatel ">1</a>

            </div>
            <div class="stepwizard-step">
                <p>Tipo</p>
                <a href="#step-2" type="button" class="btn btn-circle btn-default">2</a>
            </div>
        </div>
    </div>



    <div class="row mt-5">
        <div class="col-lg-12 contenedor_regla" id="step-1">
            <div class="col-lg-12">
                <h2 class="page-title-fonatel text-center">Crear Regla de Validación</h2>
                <hr />
            </div>
            <div class="col-lg-12">
                @Html.Partial("_CrearRegla")
            </div>    
        </div>
        <div class="col-lg-12 hidden contenedor_regla" id="step-2">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-title-fonatel text-center">Agregar Tipo Regla de Validación</h2>
                    <hr />
                </div>
                <div class="col-sm-12">
                    @Html.Partial("_CrearTipoRegla")
                </div>
                <div class="col-sm-12 mt-5">
                    @Html.Partial("_TablaDetalleVariable")
                </div>
                <div class="col-sm-12 text-center">
                    <button type="submit" id="btnAtrasTipoRegla" class="btn btn-fonatel btn-info-fonatel">Atras</button>
                    <button type="submit" id="btnSiguienteTipoSiguiente" class="btn btn-fonatel btn-info-fonatel">Guardar</button>
                </div>

            </div>

        </div>
    </div>

</div>
