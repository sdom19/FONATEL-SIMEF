@using GB.SIMEF.Resources;

  <div class="row">
      <div class="col-md-6 col-sm-12">

          <div class="form-group center">
              <label for="ddlVariableRegla" class="col-form-label">Variable</label>
                <div class="select2-wrapper">
                    <select class="listasDesplegables" id="ddlVariableRegla">
                        <option></option>
                        <option value="1">Cantidad Torres</option>
                        <option value="2">Estado de Torres</option>
                    </select>
                    </div>
                <small id="VariableHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
              </div>



          <div class="form-group center">
              <label for="ddlOperadorRegla" class="col-form-label">Operador</label>
                <div class="select2-wrapper">
                    <select class="form-control form-control-fonatel   required listasDesplegables" aria-label="Default select example" id="ddlOperadorRegla">
                        <option></option>
                        <option value="1">igual</option>
                        <option value="2">menor que</option>
                        <option value="3">mayor que</option>
                        <option value="4">menor o igual que</option>
                        <option value="5">mayor o igual que</option>
                        <option value="6">diferente</option>
                    </select>
                </div>
             
                <small id="OperadorHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
          </div>

      </div>

      <div class="col-md-6 col-sm-12">

          <div class="form-group center">
              <label for="ddlTipoRegla" class="col-form-label ">Tipo Regla</label>
                <div class="select2-wrapper">
                    <select class="listasDesplegables" aria-label="Default select example" id="ddlTipoRegla">
                        <option></option>
                        <option value="1">Fórmula cambio mensual</option>
                        <option value="2">Fórmula contra otro indicador Entrada</option>
                        <option value="6">Fórmula contra otro indicador Salida</option>
                        <option value="7">Fórmula contra otro indicador Entrada/Salida</option>
                        <option value="3">Fórmula contra constante</option>
                        <option value="4">Fórmula contra atributos válidos</option>
                        <option value="5">Fórmula actualización secuencial</option>
                    </select>
                </div>
                <small id="TipoReglaHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>

          </div>

          <div class="hidden" id="divFormulaContraConstante">
              <div class="form-group center">
                  <label for="txtConstanteRegla" class="col-form-label">Valor Constante</label>
                    <input type="text" class="form-control form-control-fonatel  " id="txtConstanteRegla" placeholder="Constante">
                    <small id="txtConstanteReglaHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
              </div>
          </div>
          <div class="hidden" id="divFormulaContraIndicador">

              <div class="form-group center">
                  <label for="ddlIndicadorComparacionRegla" class="col-form-label">Indicador Comparación</label>
                    <div class="select2-wrapper">
                        <select class=" listasDesplegables" id="ddlIndicadorComparacionRegla">
                            <option></option>
                            <option value="1">Torres Según Estado</option>
                            <option value="2">CPSP conectados</option>
                            <option value="3">Hogares Benificiados</option>
                            <option value="4">Dispositivos entregados</option>
                        </select>
                    </div>
                    <small id="ddlIndicadorComparacionHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
              </div>


              <div class="form-group center">
                    <label for="ddlVariableComparacionRegla" class="col-form-label">Variable Comparación</label>
                    <div class="select2-wrapper">
                        <select class="listasDesplegables" id="ddlVariableComparacionRegla">
                            <option></option>
                            <option value="1">Cantidad Torres</option>
                            <option value="2">Estado de Torres</option>
                        </select>
                    </div>
                    <small id="ddlVariableComparacionReglaHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
              </div>
          </div>
          <div class="hidden" id="divFormulaContraAtributosValido">

              <div class="form-group center">
                  <label for="ddlAtributosValidosCategoríaRegla" class="col-form-label">Categoría ID</label>
                    <div class="select2-wrapper">
                        <select class="listasDesplegables" id="ddlAtributosValidosCategoríaRegla">
                            <option></option>
                            <option value="1">CAT-1</option>
                            <option value="2">CAT-2</option>
                            <option value="2">CAT-3</option>
                        </select>
                    </div>
                    <small id="ddlAtributosValidosCategoríaReglaHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
              </div>


              <div class="form-group center">
                  <label for="ddlAtributosValidosRegla" class="col-form-label">Atributos Validos</label>
                    <div class="select2-wrapper">
                        <select multiple class="listasDesplegables" id="ddlAtributosValidosRegla">
                            <option></option>
                            <option value="1">Provincia</option>
                            <option value="2">Cantón</option>
                            <option value="2">Distrito</option>
                        </select>
                    </div>
                    <small id="ddlAtributosValidosReglaHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
              </div>
          </div>
          <div class="hidden" id="divFormulaActualizacionSecuencial">

              <div class="form-group center">
                  <label for="ddlCategoríaActualizableRegla" class="col-form-label">Categoría Actualizable</label>
                    <div class="select2-wrapper">
                        <select class="listasDesplegables" id="ddlCategoríaActualizableRegla">
                            <option></option>
                            <option value="1">Estado de Torres</option>
                        </select>
                    </div>
                    <small id="ddlCategoríaActualizableReglaHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
              </div>
          </div>
          <div class="hidden" id="divFormulaContraIndicadorSalida">
              <div class="form-group center">
                <label for="ddlIndicadorSalidaRegla" class="col-form-label">Indicador de Salida</label>
                    <div class="select2-wrapper">
                        <select class="listasDesplegables" id="ddlIndicadorSalidaRegla">
                            <option></option>
                            <option value="1">Cálculo de Torres Pendientes</option>
                        </select>
                    </div>
                    <small id="ddlIndicadorSalidaReglaHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
              </div>
          </div>



      </div>
      </div>
  <div class="row">
      <div class="col-sm-12 text-center mt-5">
          <button id="btnGuardarReglaTipo" type="submit" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
          <button id="btnCancelarRegla" type="submit" class="btn btn-fonatel btn-error-fonatel">@Etiquetas.BotonCancelar</button>
      </div>
  </div>


