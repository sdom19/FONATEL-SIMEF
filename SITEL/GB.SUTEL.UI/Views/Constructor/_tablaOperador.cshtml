@using GB.SUTEL.Entities
@model List<Operador>


    <table class="display" cellspacing="0" data-table-grid="true" data-table-grid-display-rows="4">
        <thead>
            <tr>
                <th>
                    Código
                </th>
                
                <th>
                   Operador
                </th>

                <th class="no-sort" style="min-width:40px;"></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <td>@Html.TextBox("txtFiltroCodigoOperador", null, new { size = "5", onkeyup = "filtrarOperador(event);", @placeholder = "Código" })</td>
                <td colspan ="2">@Html.TextBox("txtFiltroNombreOperador", null, new { size = "10", onkeyup = "filtrarOperador(event);", @placeholder = "Operador" })</td>
               
            </tr>
        </tfoot>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdOperador)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreOperador)
                    </td>
                    
                    <td>
                        <button type="button" class="btn btn-success" data-dismiss="modal" onclick="functCambioOperador('@item.IdOperador','@item.NombreOperador');"
                                data-select="true" data-target="#divOperador"
                                data-json-selected='{"IdOperador":" @item.IdOperador ", "nombreOperador": " @item.NombreOperador"}'>
                            <span class="glyphicon glyphicon-circle-arrow-right" aria-hidden="true"></span>
                        </button>

                    </td>
                </tr>
            }
    </tbody>
   </table>
