@using GB.SUTEL.Entities
@model List<Operador>
    <script type="text/javascript">
        function loadOperadorClonar(idOperador) {

            var inList = false;

            for (var i = 0; i < operadoresClonar.length; i++) {
                if (idOperador == operadoresClonar[i]) {
                    inList = true;
                }
            }

            if (!inList) {
                operadoresClonar.push(idOperador);
            }
        };

        for (var i = 0; i < operadoresClonar.length; i++) {
            $("#CKOId_" + operadoresClonar[i]).prop('checked', true);
        }
    </script>

    <table class="display" cellspacing="0" data-table-grid="true" data-table-grid-display-rows="4">
        <thead>
            <tr>
                <th class="no-sort" style="min-width:40px;"></th>
                <th>
                    Código
                </th>

                <th>
                    Operador
                </th>


            </tr>
        </thead>
        <tfoot>
            <tr>
                <td></td>
                <td>@Html.TextBox("txtFiltroCodigoOperadorClonado", null, new { size = "5", onkeyup = "filtrarOperadorClonar(event);", @placeholder = "Código" })</td>
                <td>@Html.TextBox("txtFiltroNombreOperadorClonado", null, new { size = "10", onkeyup = "filtrarOperadorClonar(event);", @placeholder = "Operador" })</td>

            </tr>
        </tfoot>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        <input id="CKOId_@item.IdOperador" value="@item.IdOperador" data-id="@item.IdOperador" type="checkbox" onchange="functSeleccionarOperadorID('@item.IdOperador')" />
                        @*<script>loadOperadorClonar(@item.IdOperador)</script></td>*@
                    <td><label for="CKOId_@item.IdOperador">@item.IdOperador</label></td>
                    <td><label for="CKOId_@item.IdOperador">@item.NombreOperador</label></td>



                </tr>
            }
        </tbody>
    </table>
    <div class="alert alert-danger" hidden role="alert" id="divMensajeErroOperadorClonar">
        <strong>Error!</strong>
        <div id="idMensajeErrorCuerpoOperadorClonar"></div>
    </div>
