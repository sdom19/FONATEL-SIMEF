@using GB.SIMEF.Resources;

<div class="row">

    <div class="col-md-1 offset-md-1"></div>
    <div class="col-lg-10 col-md-10 col-sm-10">
        <div class="form-group">
            <label for="ddlPantalla" class="col-sm-12 col-form-label pl-0">Pantallas</label>
            <div class="select2-wrapper mw-100 pl-0" id="select-pantallas">
                @Html.DropDownList("ddlPantalla", new SelectList(ViewBag.Pantalla, "Value", "Text"), new { @class = "listasDesplegables_todos multiple-Select", id = "ddlPantalla", multiple = true })
            </div>
        </div>
    </div>
    <div class="col-md-1 offset-md-1"></div>

</div>
<div class="row">

    <div class="col-md-1 offset-md-1"></div>
    <div class="col-lg-5 col-md-5 col-sm-5">
        <div class="form-group">
            <label for="ddlUsuario" class="col-sm-12 col-form-label pl-0">Usuarios</label>

            <div class="select2-wrapper">
                @Html.DropDownList("ddlUsuario", new SelectList(ViewBag.Usuario, "Value", "Text"), new { @class = "listasDesplegables_todos multiple-Select", id = "ddlUsuario", multiple = true })

            </div>
        </div>
    </div>

    <div class="col-md-1 offset-md-1"></div>
    <div class="col-lg-4 col-md-4 col-sm-12 text-right">
        <div class="form-group">
            <label for="ddlAccion" class="col-sm-12 col-form-label text-left pl-5">Acciones</label>

            <div class="select2-wrapper" id="select-accion">
                @Html.DropDownList("ddlAccion", new SelectList(ViewBag.Accion, "Value", "Text"), "Todos", new { @class = "listasDesplegables_todos multiple-Select", id = "ddlAccion", multiple = true })

            </div>
        </div>
    </div>

    <div class="col-md-1 offset-md-1"></div>

</div>
<div class="row">
    <div class="col-md-1 offset-md-1"></div>
    <div class="col-lg-5 col-md-5 col-sm-5">
        <div class="form-group">
            <label for="txtFechaMinimaBitacora" class="col-form-label">Fecha Inicio</label>
            <input type="date" class="form-control form-control-fonatel " id="txtFechaDesde" placeholder="Fecha de Inicio">
        </div>
    </div>

    <div class="col-md-1 offset-md-1"></div>
    <div class="col-lg-4 col-md-4 col-sm-4 text-right">
        <div class="form-group">
            <label for="txtFechaMaximaBitacora" class="col-md-12 col-form-label text-left pl-5">Fecha Final</label>
            <input type="date" class="form-control form-control-fonatel " id="txtFechaHasta" placeholder="Fecha de Fin" style="float:right">
        </div>
    </div>
    <div class="col-md-1 offset-md-1"></div>
</div>

<div class="row">

    <div class="col-sm-12 text-center mt-4" style="display: inline-block;">
        <button type="submit" id="btnBuscarBitacora" class="btn btn-fonatel btn-info-fonatel">@Etiquetas.BotonBuscar</button>
        <button type="submit" id="btnCancelarBitacora" class="btn btn-fonatel btn-error-fonatel">@Etiquetas.BotonCancelar</button>
    </div>

</div>

<style>
    #select-pantallas span.select2-container {
        max-width: 100% !important;
    }
    #select-accion span.select2-container {
        text-align: left;
    }
</style>
