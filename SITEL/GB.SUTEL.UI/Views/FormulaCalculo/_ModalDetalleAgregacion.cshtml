@using GB.SIMEF.Resources;

<div class="modal fade modal-fonatel" data-backdrop="static" id="modalFormulaDetalleAgregacion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-fonatel" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
                <h5 class="modal-title" id="titulo_modalDetalleFormulaCalculo">Detalle</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12" id="divCategoría_ModalDetalle">
                        <div class="form-group center">
                            <label for="ddlCategoría_ModalDetalle" class="col-form-label">Categoría</label>
                            <div class="select2-wrapper">
                                <select class="listasDesplegables" id="ddlCategoría_ModalDetalle">
                                    <option></option>
                                    <option value="1">Categoría 1</option>
                                    <option value="2">Categoría 2</option>
                                    <option value="3">Categoría 3</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12" id="divCriterio_ModalDetalle">
                        <div class="form-group center">
                            <label for="ddlCriterio_ModalDetalle" class="col-form-label">Criterio</label>
                            <div class="select2-wrapper">
                                <select class="listasDesplegables" id="ddlCriterio_ModalDetalle">
                                    <option></option>
                                    <option value="1">Criterio 1</option>
                                    <option value="2">Criterio 2</option>
                                    <option value="3">Criterio 3</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group center">
                            <label for="ddlDetalle_ModalDetalle" class="col-form-label">Detalle</label>
                            <div class="select2-wrapper">
                                <select class="listasDesplegables" id="ddlDetalle_ModalDetalle">
                                    <option></option>
                                    <option value="1">Detalle 1</option>
                                    <option value="2">Detalle 2</option>
                                    <option value="3">Detalle 3</option>
                                </select>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <div class="text-center">
                    <button type="submit" id="btnGuardar_modalDetalle" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
                    <button type="submit" id="btnEliminar_modalDetalle" class="btn btn-fonatel btn-warning-fonatel">@Etiquetas.BotonEliminar</button>
                    <button type="submit" class="btn btn-fonatel btn-error-fonatel" data-dismiss="modal">@Etiquetas.BotonCancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>
