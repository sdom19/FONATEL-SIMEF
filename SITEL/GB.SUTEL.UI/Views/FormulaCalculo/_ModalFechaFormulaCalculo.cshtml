@using GB.SIMEF.Resources;

<div class="modal fade modal-fonatel" data-backdrop="static" id="modalFechaFormulaCalculo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-fonatel" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
                <h5 class="modal-title" id="titulo_modalFechaFormulaCalculo">Definición de Fechas</h5>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group center">
                            <label class="col-form-label ">Unidad de Medida</label>

                            <label class="radio-inline" style="display: block;">
                                <input type="radio" id="radioDias_modalFechaFormula" name="radiosUnidadDeMedidaModalFormula" value="" checked>
                                Días
                            </label>
                            <label class="radio-inline mt-3" style="display: block;">
                                <input type="radio" id="radioMeses_modalFechaFormula" name="radiosUnidadDeMedidaModalFormula" value="">
                                Meses
                            </label>
                            <label class="radio-inline mt-3" style="display: block;">
                                <input type="radio" id="radioAnios_modalFechaFormula" name="radiosUnidadDeMedidaModalFormula" value="">
                                Años
                            </label>
                        </div>
                        <div class="form-group center">
                            <label for="ddlTipoFechaInicioModalFechaFormula" class="col-form-label ">Tipo Fecha Inicio</label>
                            <div class="select2-wrapper">
                                <select class="form-control form-control-fonatel required listasDesplegables" aria-label="Default select example" id="ddlTipoFechaInicioModalFechaFormula">
                                    <option></option>
                                    <option value="1">Fecha</option>
                                    <option value="2">Categoría de Desagregación</option>
                                    <option value="3">Fecha Actual</option>
                                </select>
                            </div>
                            <small id="ddlIndicadorFormularioHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                        </div>

                        <div class="form-group center hidden" id="divFechaInicioFormulaCalculo">
                            <label for="txtFechaInicioFormulaCalculo" class="col-form-label">Fecha Inicio</label>
                            <input type="date" class="form-control form-control-fonatel  " id="txtFechaInicioFormulaCalculo">
                            <small id="txtFechaInicioFormulaCalculoHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                        </div>

                        <div class="form-group center hidden" id="divCategoríaFechaInicioFormulaCalculo">
                            <label for="ddlCategoríaFechaInicioFormulaCalculo" class="col-form-label ">Categorías Tipo Fecha</label>
                            <div class="select2-wrapper">
                                <select class="form-control form-control-fonatel required listasDesplegables" aria-label="Default select example" id="ddlCategoríaFechaInicioFormulaCalculo">
                                    <option></option>
                                    <option value="1">Tipo fecha 1</option>
                                    <option value="1">Tipo fecha 2</option>
                                    <option value="1">Tipo fecha 3</option>
                                </select>
                            </div>
                            <small id="ddlCategoríaFechaInicioFormulaCalculoHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                        </div>

                        <div class="form-group center">
                            <label for="ddlTipoFechaFinalModalFechaFormula" class="col-form-label ">Tipo Fecha Final</label>
                            <div class="select2-wrapper">
                                <select class="form-control form-control-fonatel required listasDesplegables" aria-label="Default select example" id="ddlTipoFechaFinalModalFechaFormula">
                                    <option></option>
                                    <option value="1">Fecha</option>
                                    <option value="2">Categoría de Desagregación</option>
                                    <option value="3">Fecha Actual</option>
                                </select>
                            </div>
                            <small id="ddlIndicadorFormularioHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                        </div>



                        <div class="form-group center hidden" id="divFechaFinalFormulaCalculo">
                            <label for="txtFechaFinalFormulaCalculo" class="col-form-label">Fecha Final</label>
                            <input type="date" class="form-control form-control-fonatel  " id="txtFechaFinalFormulaCalculo">
                            <small id="txtFechaFinalFormulaCalculoHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                        </div>

                        <div class="form-group center hidden" id="divCategoríaFechaFinalFormulaCalculo">
                            <label for="ddlCategoríaFechaFinalFormulaCalculo" class="col-form-label ">Categorías Tipo Fecha</label>
                            <div class="select2-wrapper">
                                <select class="form-control form-control-fonatel required listasDesplegables" aria-label="Default select example" id="ddlCategoríaFechaFinalFormulaCalculo">
                                    <option></option>
                                    <option value="1">Tipo fecha 1</option>
                                    <option value="1">Tipo fecha 2</option>
                                    <option value="1">Tipo fecha 3</option>
                                </select>
                            </div>
                            <small id="ddlCategoríaFechaFinalFormulaCalculoHelp" class="form-text form-text-danger-fonatel">@Etiquetas.CampoRequerido</small>
                        </div>

                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <div class="text-center">
                    <button type="submit" id="btnGuardar_modalFechaFormulaCalculo" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
                    <button type="submit" class="btn btn-fonatel btn-error-fonatel" data-dismiss="modal">@Etiquetas.BotonCancelar</button>
                    <button type="submit" id="btnEliminar_modalFechaFormulaCalculo" class="btn btn-fonatel btn-warning-fonatel">@Etiquetas.BotonEliminar</button>
                </div>
            </div>
        </div>
    </div>
</div>

