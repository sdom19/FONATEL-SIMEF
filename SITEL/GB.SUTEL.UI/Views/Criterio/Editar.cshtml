@model  GB.SUTEL.Entities.Criterio



<form id="formEditar" method="post"
      data-ajax="true" action="@Url.Action("Editar")"
      data-ajax-message="Actualizando Criterio...">


    <div class="modal fade" id="modalEditarCriterio">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Modificar Criterio</h4>
                </div>
                <div class="modal-body">

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)


                        <div class="form-group">
                          
                            @Html.LabelFor(model => model.IdCriterio, new { @class = "col-md-2 control-label" , @id = "IdCriterio"})
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.IdCriterio, new { htmlAttributes = new { @class = "form-control", @placeholder = "Codigo", @id = "txtCodigo", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.IdCriterio)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.DescCriterio, new { @class = "col-md-2 control-label" })
                            <div class="col-sm-10">

                                @Html.TextAreaFor(model => model.DescCriterio,  new { @class = "form-control", @placeholder = "Nombre", @id = "txtNombreCriterio"  })
                                @Html.ValidationMessageFor(model => model.DescCriterio, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.IdDireccion, new { @class = "col-md-2 control-label" })
                            <div class="col-sm-10">
                                @Html.DropDownList("IdDireccion", (List<SelectListItem>)ViewBag.listaDirecciones, new {  @class = "form-control", @id = "IdDireccionEditar" })

                                @Html.ValidationMessageFor(model => model.IdDireccion, "", new { @class = "text-danger" })
                                <br />
                               
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.IdIndicador, new { @class = "col-md-2 control-label" })
                            <div class="col-sm-10">
                                @Html.DropDownList("IdIndicador", (List<SelectListItem>)ViewBag.listaIndicadores, new { @class = "form-control", @id = "IdIndicadorEditar" })
                                <br />
                                @Html.ValidationMessageFor(model => model.IdIndicador, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="alert alert-danger hidden" role="alert" id="divMensajeErroEditarCriterio">
                            <span id="errorMensajeEditar"></span>
                        </div>
                        <br />
                        <div class="alert alert-danger hidden" role="alert" id="divMensajeErrorEditarCriterio">
                            <span id="errorMensajeEditar"></span>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="submit" value="Guardar Cambios" class="btn btn-success" alt="Guardar Cambios" title="Guardar Cambios" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal" title="Salir">Salir</button>
                   
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</form>