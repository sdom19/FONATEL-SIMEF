@model  GB.SUTEL.Entities.Criterio



<form id="formCreate" method="post"
      data-ajax="true" action="@Url.Action("Crear")"
      data-ajax-message="Guardando Criterio...">


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="modal fade" id="modalCrearCriterio">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Crear Criterio</h4>
                </div>
                <div class="modal-body">

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            @Html.LabelFor(model => model.IdCriterio, new { @class = "col-md-2 control-label" })
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.IdCriterio, new { htmlAttributes = new { @class = "form-control" } })<br />
                                @Html.ValidationMessageFor(model => model.IdCriterio, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.DescCriterio, new { @class = "col-md-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextAreaFor(model => model.DescCriterio, new { @class = "form-control" } )<br />
                                @Html.ValidationMessageFor(model => model.DescCriterio, "", new { @class = "text-danger" })
                            </div>
                            <br />
                            <div class="alert alert-danger hidden" role="alert" id="divMensajeErrorNuevoNivel">
                                <span id="errorMensaje"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.IdDireccion, new { @class = "col-md-2 control-label" })
                            <div class="col-sm-10">
                                @Html.DropDownList("IdDireccion", (List<SelectListItem>)ViewBag.listaDirecciones, new { @class = "form-control" })
                                <br />
                                @Html.ValidationMessageFor(model => model.IdDireccion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.IdIndicador, new { @class = "col-md-2 control-label" })
                            <div class="col-sm-10">
                                @Html.DropDownList("IdIndicador", (List<SelectListItem>)ViewBag.listaIndicadores, new { @class = "form-control"  })
                                <br />
                                @Html.ValidationMessageFor(model => model.IdIndicador, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="alert alert-danger hidden" role="alert" id="divMensajeErrorNuevoCriterio">
                        <span id="MyerrorMensaje"></span>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="submit" value="Crear" class="btn btn-success" alt="Crear" title="Crear" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal" title="Salir">Salir</button>
                    
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

</form>