@model List<GB.SUTEL.Entities.Rol>

<form id="formRoles" method="post"
      action="@Url.Action("EditarRoles")" data-ajax="true"
      data-ajax-message="Cargando datos...">
    <div class="modal fade" id="modalRol">
        <div class="modal-dialog modal-sm" style="width:300px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Registro de Roles</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <div class="col-sm-12">
                                <h4>Usuario: <span data-id="NombreUsuario"></span></h4>
                                <input data-val="true" id="IdUsuario" name="IdUsuario" type="hidden" value="0">
                            </div>
                        </div>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <div class="form-group">

                                    <div class="col-sm-offset-2">
                                        <input type="checkbox" name="ROLES" data-id="@item.IdRol" id="rolId @item.IdRol"/> 
                                        <label for="rolId @item.IdRol">@item.NombreRol</label>
                                    </div>
                                </div>
                            }
                        }


                    </div>
                    <div class="form-group">
                        <div class="alert alert-danger" hidden role="alert" name="error">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">                    
                    <input type="submit" value="Guardar Cambios" class="btn btn-success" />
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

</form>
