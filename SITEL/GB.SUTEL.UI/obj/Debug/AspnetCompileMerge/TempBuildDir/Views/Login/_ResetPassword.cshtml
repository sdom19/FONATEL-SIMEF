@model GB.SUTEL.Entities.Usuario
<div class="modal fade" id="modalCambiarClave">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Olvid&eacute; mi contrase&ntilde;a</h4>
            </div>
            <form id="formCambiarClave" method="post"
                  action="@Url.Action("ResetPassword")" data-ajax="true"
                  data-ajax-message="Espere..." data-ajax-message-default="Enviar">
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        <div class="form-group">                            
                            @*AccesoUsuario*@
                            <div class="form-group tipoExterno">   
                                <p class="col-md-push-1 col-md-11 col-xs-12">La nueva contrase&ntilde;a ser&aacute; enviada al correo de contacto.</p>
                                <br/><br/>
                                <div class="col-md-push-1 col-md-11 col-xs-12">
                                    @Html.EditorFor(model => model.AccesoUsuario, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre de usuario" } })
                                    @Html.ValidationMessageFor(model => model.AccesoUsuario, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            @*Error*@
                            <div class="form-group">
                                <div class="alert alert-danger" hidden role="alert" name="error">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Salir</button>
                    <input type="submit" value="Enviar" class="btn btn-primary" />
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->

</div><!-- /.modal -->
