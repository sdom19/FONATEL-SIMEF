

<form class="mt-5">
    <div class="row">
        <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">
                <div class="form-group row">
                    <label for="txtNombre" class="col-sm-4 col-form-label">Nombre</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="txtNombre" placeholder="Nombre de Regla">
                        <small id="nombreHelp" class="form-text text-danger">El nombre es requerido</small>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtCodigo" class="col-sm-4 col-form-label">Código</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="txtCodigo" placeholder="Codigo">
                        <small id="CodigoHelp" class="form-text text-danger">El Código es requerido</small>
                    </div>
                </div>
        </div>
        <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">
            <div class="form-group row">
                <label for="ddlIndicadorRegla" class="col-sm-4 col-form-label">Indicador</label>
                <div class="col-sm-8">
                    <select class="form-control required listasDesplegables" id="ddlIndicadorRegla">
                        <option></option>
                        <option value="1">Torres Según Estado</option>
                        <option value="2">CPSP conectados</option>
                        <option value="3">Hogares Benificiados</option>
                        <option value="4">Dispositivos entregados</option>
                    </select>
                    <br />
                    <small id="TipoIndicadorHelp" class="form-text text-danger">El Indicador es requerido</small>
                </div>
            </div>

            <div class="form-group row">
                <label for="txtDescripcionRegla" class="col-sm-4 col-form-label">Descrpción</label>
                <div class="col-sm-8">
                    <textarea class="form-control textarea" id="txtDescripcionRegla" placeholder="Descripción"></textarea>
                    <small id="DescripcionReglaHelp" class="form-text text-danger">La Descripción es requerido</small>
                </div>
            </div>


        </div>
    </div>

</form>

