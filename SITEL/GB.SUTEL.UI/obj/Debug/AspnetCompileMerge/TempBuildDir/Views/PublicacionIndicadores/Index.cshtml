
@{
    ViewBag.Title = "Publicación de Indicadores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container body-content">
    <div class="text-right">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                <li class="breadcrumb-item active" aria-current="page">Publicación de Indicadores</li>
            </ol>
        </nav>
    </div>
    <div class="row card">
        <div class="col-lg-12">
            <h2 class="text-primary text-center">Publicación de Indicadores</h2>
            <hr />
        </div>
        <div class="col-lg-12 mt-5">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="form-group row">
                        <label for="ddlGrupoIdicadorDefinicion" class="col-sm-3 col-form-label">Grupo</label>
                        <div class="col-sm-9">
                            <select class="form-control required listasDesplegables" id="ddlGrupoIdicadorDefinicion">
                                <option></option>
                                <option>Grupo 1</option>
                                <option>Grupo 2</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">

                    <div class="form-group row">
                        <label for="ddlTipoIndicadorDefinicion" class="col-sm-3 col-form-label ">Tipo</label>
                        <div class="col-sm-9">
                            <select class="form-control required listasDesplegables" id="ddlTipoIndicadorDefinicion">
                                <option></option>
                                <option>Tipo 1</option>
                                <option>Tipo 2</option>
                            </select>
                        </div>
                    </div>
                </div>
                </div>

                <div class="row">
                    <div class="col-md-12 text-center">
                        <button class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </div>
      
    </div>


    <div class="row mt-5">
        <div class="col-md-12">
            <div class="col-lg-12 mt-4">
                @Html.Partial("_TablaIndicadores")
            </div>
        </div>
    </div>

</div>





