

<form class="mt-5">
    <div class="row">
        <div class="col-md-4 col-sm-12">
           
            <div class="form-group row">
                <label for="txtCodigo" class="col-sm-12 col-form-label">Código</label>
                <div class="col-sm-12">
                    <input type="text" class="form-control form-control-fonatel" id="txtCodigo" placeholder="Codigo">
                    <small id="CodigoHelp" class="form-text form-text-danger-fonatel">El Código es requerido</small>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-12">

            <div class="form-group row">
                <label for="txtNombre" class="col-sm-12 col-form-label">Nombre</label>
                <div class="col-sm-12">
                    <input type="text" class="form-control form-control-fonatel" id="txtNombre" placeholder="Nombre de Regla">
                    <small id="nombreHelp" class="form-text form-text-danger-fonatel">El nombre es requerido</small>
                </div>
            </div>
        </div>

        <div class="col-md-4 col-sm-12">
            <div class="form-group row">
                <label for="ddlIndicadorRegla" class="col-sm-12 col-form-label">Indicador</label>
                <div class="col-sm-12">
                    <div class="select2-wrapper">
                        <select class=" listasDesplegables" id="ddlIndicadorRegla">
                            <option></option>
                            <option value="1">Torres Según Estado</option>
                            <option value="2">CPSP conectados</option>
                            <option value="3">Hogares Benificiados</option>
                            <option value="4">Dispositivos entregados</option>
                        </select>
                    </div>


                    <small id="TipoIndicadorHelp" class="form-text form-text-danger-fonatel">El Indicador es requerido</small>
                </div>
            </div>
        </div>


    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group row">
                <label for="txtDescripcionRegla" class="col-sm-12 col-form-label">Descrpción</label>
                <div class="col-sm-12">
                    <textarea class="form-control form-control-fonatel textarea" id="txtDescripcionRegla" placeholder="Descripción"></textarea>
                    <small id="DescripcionReglaHelp" class="form-text form-text-danger-fonatel">La Descripción es requerido</small>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 text-center mt-5">
            <button id="btnGuardarRegla" class="btn btn-fonatel btn-success-fonatel">Guardar</button>
            <button type="submit" class="btn btn-fonatel btn-error-fonatel">Cancelar</button>
        </div>
    </div>

</form>

