
@{
    ViewBag.Title = "Crear Indicadores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container body-content">
    <div class="row">
        <div class="col-sm-12">
            <div class="text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                        <li class="breadcrumb-item active"><a href="@Url.Action( "create","IndicadorFonatel")">Indicadores</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Crear Indicador</li>
                    </ol>
                </nav>
            </div>

        </div>
    </div>

    <div class="stepwizard col-sm-offset-3">
        <div class="stepwizard-row setup-panel step_navigation_indicador">
            <div class="stepwizard-step" data-step="0">
                <p>Indicador</p>
                <a href="#step-1" type="button" class="btn btn-circle">1</a>

            </div>
            <div class="stepwizard-step" data-step="1">
                <p>Variables</p>
                <a href="#step-2" type="button" class="btn btn-circle">2</a>

            </div>
            <div class="stepwizard-step" data-step="2">
                <p>Categorías</p>
                <a href="#step-3" type="button" class="btn btn-circle">3</a>

            </div>
        </div>
    </div>





    <div class="row mt-5">
        <div class="col-lg-12 stepwizard-content-container hidden" id="step-1">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-title-fonatel text-center">Crear Indicador</h2>
                    <hr />
                </div>
                <div class="col-lg-12">
                    @Html.Partial("_CrearIndicador")
                    @Html.Partial("_ModalTipoIndicador")
                    @Html.Partial("_ModalGrupoIndicador")
                    @Html.Partial("_ModalUnidadEstudio")
                </div>
            </div>



        </div>

        <div class="col-lg-12 stepwizard-content-container hidden" id="step-2">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-title-fonatel text-center">Agregar Variable Dato</h2>
                    <hr />
                </div>
                <div class="col-lg-12">
                    @Html.Partial("_CrearVariable")
                </div>
                <div class="col-lg-12">
                    @Html.Partial("_TablaDetalleVariable")
                </div>

                <div class="col-lg-12 text-center">
                    <button type="submit" id="btnAtrasVariable" class="btn btn-fonatel btn-info-fonatel">Atras</button>
                    <button type="submit" id="btnSiguienteVariable" class="btn btn-fonatel btn-info-fonatel">Siguiente</button>

                </div>
                </div>
            </div>

        </div>

        <div class="col-lg-12 stepwizard-content-container hidden " id="step-3">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-title-fonatel text-center">Agregar Categoría</h2>
                    <hr />
                </div>
                <div class="col-lg-12">
                    @Html.Partial("_CrearCategoria")
                </div>
                <div class="col-lg-12">
                    @Html.Partial("_TablaDetalleCategoria")
                </div>

                <div class="col-lg-12 text-center">
                    <button type="submit" id="btnAtrasCategoria" class="btn btn-fonatel btn-info-fonatel">Atras</button>
                    <button type="submit" id="btnSiguienteCategoria" class="btn btn-fonatel btn-info-fonatel">Finalizar</button>

                </div>
            </div>
        </div>
    </div>




