@using GB.SIMEF.Resources;

@model GB.SIMEF.Entities.Indicador

<form id="formCrearIndicador">
    <div class="row">
        <div class="col-lg-4 col-sm-12">

            <div class="form-group">
                <label for="inputCodigo" class="col-form-label">@EtiquetasViewIndicadorFonatel.CrearIndicador_LabelCodigo</label>

                @{
                    var htmlAttributes = new Dictionary<string, object>
                    {
                        { "id", "inputCodigo" },
                        { "class" , "form-control form-control-fonatel alfa_numerico"},
                        { "maxlength", 30 },
                        { "placeholder", EtiquetasViewIndicadorFonatel.CrearIndicador_LabelCodigo }
                    };

                    if (ViewBag.ModoFormulario == ((int)Constantes.Accion.Editar).ToString())
                    {
                        htmlAttributes.Add("disabled", "disabled");
                    }
                }

                @Html.EditorFor(model => model.Codigo, new { htmlAttributes = htmlAttributes })
                <small id="inputCodigoHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>

            <div class="form-group">
                <label for="inputNombre" class="col-form-label">@EtiquetasViewIndicadorFonatel.CrearIndicador_LabelNombre</label>
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control form-control-fonatel solo_texto", @maxlength = "300", placeholder = EtiquetasViewIndicadorFonatel.CrearIndicador_LabelNombre, id = "inputNombre" } })
                <small id="inputNombreHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>

            <div class="form-group">
                <label for="ddlTipo" class="col-form-label">@EtiquetasViewIndicadorFonatel.CrearIndicador_LabelTipo</label>
                <div class="select2-btn-wrapper">
                    @Html.DropDownListFor(model => model.TipoIndicadores.id, new SelectList(ViewBag.TiposIndicadores, "id", "Nombre"), "Seleccione", new { @class = "listasDesplegables", id = "ddlTipo" })
                    <button class="btn-icon-base btn-add" type="button" id="btnModalTipoIndicador" data-toggle="tooltip" data-placement="top" title="Agregar Tipo" alt="Agregar tipo indicador"></button>
                </div>
                <small id="ddlTipoHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>

            <div class="form-group">
                <label for="ddlFrecuencias" class="col-form-label ">@EtiquetasViewIndicadorFonatel.CrearIndicador_LabelFrecuencias</label>
                <div class="select2-wrapper">
                    @Html.DropDownListFor(model => model.FrecuenciaEnvio.id, new SelectList(ViewBag.FrecuenciasEnvio, "id", "Nombre"), "Seleccione", new { @class = "listasDesplegables", id = "ddlFrecuencias" })
                </div>
                <small id="ddlFrecuenciasHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>
        </div>

        <div class="col-lg-4 col-sm-12">

            <div class="form-group">
                <label for="ddlClasificacion" class="col-form-label ">@EtiquetasViewIndicadorFonatel.CrearIndicador_LabelClasificacion</label>
                <div class="select2-wrapper">
                    @Html.DropDownListFor(model => model.ClasificacionIndicadores.id, new SelectList(ViewBag.Clasificaciones, "id", "Nombre"), "Seleccione", new { @class = "listasDesplegables", id = "ddlClasificacion" })
                </div>
                <small id="ddlClasificacionHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>

            <div class="form-group">
                <label for="ddlTipoMedida" class="col-form-label ">@EtiquetasViewIndicadorFonatel.CrearIndicador_LabelTipoMedida</label>
                <div class="select2-wrapper">
                    @Html.DropDownListFor(model => model.TipoMedida.id, new SelectList(ViewBag.TipoMedidas, "id", "Nombre"), "Seleccione", new { @class = "listasDesplegables", id = "ddlTipoMedida" })
                </div>
                <small id="ddlTipoMedidaHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>

            <div class="form-group">
                <label for="ddlGrupo" class="col-form-label ">@EtiquetasViewIndicadorFonatel.CrearIndicador_LabelGrupo</label>
                <div class="select2-btn-wrapper">
                    @Html.DropDownListFor(model => model.GrupoIndicadores.id, new SelectList(ViewBag.Grupos, "id", "Nombre"), "Seleccione", new { @class = "listasDesplegables", id = "ddlGrupo" })
                    <button id="btnModalGrupoIndicador" type="button" class="btn-icon-base btn-add" data-toggle="tooltip" data-placement="top" title="Agregar Grupo" alt="Agregar Grupo"></button>
                </div>
                <small id="ddlGrupoHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>

            <div class="form-group">
                <label for="ddlUsoIndicador" class="col-form-label ">@EtiquetasViewIndicadorFonatel.CrearIndicador_LabelUsoIndicador</label>
                <div class="select2-wrapper">
                    @Html.DropDownListFor(model => model.Interno, new SelectList(ViewBag.UsosIndicador, "Valor", "Nombre"), "Seleccione", new { @class = "listasDesplegables", id = "ddlUsoIndicador" })
                </div>
                <small id="ddlUsoIndicadorHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>

        </div>
        <div class="col-lg-4 col-sm-12">

            <div class="form-group">
                <label for="inputCantidadVariableDatosIndicador" class="col-form-label">@EtiquetasViewIndicadorFonatel.CrearIndicador_LabelCantidadVariableDatosIndicador</label>
                @Html.EditorFor(model => model.CantidadVariableDato, new { htmlAttributes = new { @class = "form-control form-control-fonatel solo_numeros", placeholder = EtiquetasViewIndicadorFonatel.CrearIndicador_LabelCantidadVariableDatosIndicador, id = "inputCantidadVariableDatosIndicador" } })
                <small id="inputCantidadVariableDatosIndicadorHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>

            <div class="form-group">
                <label for="inputCantidadCategoriaIndicador" class="col-form-label">@EtiquetasViewIndicadorFonatel.CrearIndicador_LabelCantidadCategoriaIndicador</label>
                @Html.EditorFor(model => model.CantidadCategoriasDesagregacion, new { htmlAttributes = new { @class = "form-control form-control-fonatel solo_numeros", placeholder = EtiquetasViewIndicadorFonatel.CrearIndicador_LabelCantidadCategoriaIndicador, id = "inputCantidadCategoriaIndicador" } })
                <small id="inputCantidadCategoriaIndicadorHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>

            <div class="form-group">
                <label for="ddlUnidadEstudio" class="col-form-label ">@EtiquetasViewIndicadorFonatel.CrearIndicador_LabelUnidadEstudio</label>
                <div class="select2-btn-wrapper">
                    @Html.DropDownListFor(model => model.UnidadEstudio.id, new SelectList(ViewBag.UnidadesEstudio, "id", "Nombre"), "Seleccione", new { @class = "listasDesplegables", id = "ddlUnidadEstudio" })
                    <button class="btn-icon-base btn-add" type="button" id="btnModalUnidadEstudio" data-toggle="tooltip" data-placement="top" title="Unidad de Estudio" alt="Agregar Unidad de Estudio"></button>
                </div>
                <small id="ddlUnidadEstudioHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>

            <div class="form-group">
                <label for="ddlUsoSolicitud" class="col-form-label ">@EtiquetasViewIndicadorFonatel.CrearIndicador_LabelSolicitud</label>
                <div class="select2-wrapper">
                    @Html.DropDownListFor(model => model.Solicitud, new SelectList(ViewBag.UsosSolicitud, "Valor", "Nombre"), "Seleccione", new { @class = "listasDesplegables", id = "ddlUsoSolicitud" })
                </div>
                <small id="ddlUsoSolicitudHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>
        </div>


    </div>

    <div class="row">
        <div class="col-md-4 col-sm-12">

            <div class="form-group">
                <label for="inputDescripcion" class="col-form-label">@EtiquetasViewIndicadorFonatel.CrearIndicador_LabelDescripcion</label>
                @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control form-control-fonatel solo_texto", @maxlength = "3000", placeholder = EtiquetasViewIndicadorFonatel.CrearIndicador_TextAreaDescripcionPlaceholder, id = "inputDescripcion" })
                <small id="inputDescripcionHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>
        </div>

        <div class="col-md-4 col-sm-12">
            <div class="form-group">
                <label for="inputFuenteIndicador" class="col-form-label">@EtiquetasViewIndicadorFonatel.CrearIndicador_LabelFuenteIndicador</label>
                @Html.TextAreaFor(m => m.Fuente, new { @class = "form-control form-control-fonatel solo_texto", @maxlength = "300", placeholder = EtiquetasViewIndicadorFonatel.CrearIndicador_LabelFuenteIndicador, id = "inputFuenteIndicador" })
                <small id="inputFuenteIndicadorHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>
        </div>

        <div class="col-md-4 col-sm-12">
            <div class="form-group">
                <label for="inputNota" class="col-form-label">@EtiquetasViewIndicadorFonatel.CrearIndicador_LabelNotas</label>
                @Html.TextAreaFor(m => m.Notas, new { @class = "form-control form-control-fonatel solo_texto", @maxlength = "3000", placeholder = EtiquetasViewIndicadorFonatel.CrearIndicador_LabelNotas, id = "inputNota" })
                <small id="inputNotaHelp" class="form-text form-text-danger-fonatel" style="display: none;">@Etiquetas.CampoRequerido</small>
            </div>
        </div>

    </div>
    <div class="row mt-5">
        <div class="col-sm-12">
            <div class="text-center">
                @{
                    string idBtnGuardar = string.Empty, idBtnSiguiente = string.Empty;
                    string modoFormulario = ViewBag.ModoFormulario;

                    if (modoFormulario.Equals(((int)Constantes.Accion.Insertar).ToString()))
                    {
                        idBtnGuardar = "btnGuardarCrearIndicador";
                        idBtnSiguiente = "btnSiguienteCrearIndicador";
                    }
                    else if (modoFormulario.Equals(((int)Constantes.Accion.Editar).ToString()))
                    {
                        idBtnGuardar = "btnGuardarEditarIndicador";
                        idBtnSiguiente = "btnSiguienteEditarIndicador";
                    }
                    else if (modoFormulario.Equals(((int)Constantes.Accion.Clonar).ToString()))
                    {
                        idBtnGuardar = "btnGuardarClonarIndicador";
                        idBtnSiguiente = "btnSiguienteClonarIndicador";
                    }

                }
                <button type="button" id="@idBtnGuardar" class="btn btn-fonatel btn-success-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonGuardar" alt="@Etiquetas.BotonGuardar">@Etiquetas.BotonGuardar</button>
                <button type="button" id="@idBtnSiguiente" class="btn btn-fonatel btn-next-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonSiguiente" alt="@Etiquetas.BotonSiguiente">@Etiquetas.BotonSiguiente</button>
                <button type="button" id="btnCancelarIndicador" class="btn btn-fonatel btn-error-fonatel" data-toggle="tooltip" data-placement="top" title="@Etiquetas.BotonCancelar" alt="@Etiquetas.BotonCancelar">@Etiquetas.BotonCancelar</button>
            </div>
        </div>
    </div>
</form>



