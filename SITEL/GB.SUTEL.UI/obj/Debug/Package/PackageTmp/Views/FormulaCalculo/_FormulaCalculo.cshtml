<style>

    /*
        =====================================================================================
        ESTOS ESTILOS NO DEBEN IR AQUI, MOVER A UN ARCHIVO POR APARTE EXCLUSIVO A LA PANTALLA
        =====================================================================================
    */

    .divFormulaCalculo {
        display: flex;
        flex-flow: row wrap;
        justify-content: center;
        flex-direction: row;
    }

        .divFormulaCalculo .operaciones,
        .divFormulaCalculo .acciones {
            padding-left: 0px;
            padding-right: 0px;
        }

            .divFormulaCalculo .operaciones .row:nth-child(1),
            .divFormulaCalculo .acciones .row:nth-child(1) {
                background-color: var(--blue-fonatel);
                color: white;
            }

            .divFormulaCalculo .operaciones .row:nth-child(2),
            .divFormulaCalculo .acciones .row:nth-child(2) {
                border-style: solid;
                border-color: #707070;
                background-color: var(--light-2-blue-fonatel);
            }

            .divFormulaCalculo .operaciones .row:nth-child(1) {
                border-right-width: 1px;
                border-right-style: solid;
                border-radius: 15px 0 0 0;
            }

            .divFormulaCalculo .acciones .row:nth-child(1) {
                border-radius: 0 15px 0 0;
            }

            .divFormulaCalculo .operaciones .row:nth-child(2) {
                border-width: 0 0 1px 1px;
            }

            .divFormulaCalculo .acciones .row:nth-child(2) {
                border-width: 0 1px 1px 0;
                height: calc(100% - 39.5px);
            }

        .divFormulaCalculo .formula {
            width: 100%;
            font-weight: 700;
        }

</style>

@Html.Partial("_ModalFechaFormulaCalculo")


<div class="row divFormulaCalculo">

    <div class="operaciones col-lg-7 col-md-9 col-md-9 col-xs-9">
        <div class="row">
            <div class="col text-center">
                <h4 class="text-leftThe">Fórmula de cálculo</h4>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <button type="button" id="btnCalendarFormula" class="btn-icon-base-bg btn-white btn-calendar" data-toggle="tooltip" data-placement="top" title="" data-original-title="Calendario"></button>
                <button type="button" id="btnSumarFormula" class="btn-icon-base-bg btn-white btn-addition" data-toggle="tooltip" data-placement="top" title="" data-original-title="Suma"></button>
                <button type="button" id="btnRestarFormula" class="btn-icon-base-bg btn-white btn-subtraction" data-toggle="tooltip" data-placement="top" title="" data-original-title="Resta"></button>
                <button type="button" id="btnMultiplicarFormula" class="btn-icon-base-bg btn-white btn-multiplication" data-toggle="tooltip" data-placement="top" title="" data-original-title="Miltiplicación"></button>
                <button type="button" id="btnDividirFormula" class="btn-icon-base-bg btn-white btn-division" data-toggle="tooltip" data-placement="top" title="" data-original-title="División"></button>
                <button type="button" id="btnMenorQueFormula" class="btn-icon-base-bg btn-white btn-less-than" data-toggle="tooltip" data-placement="top" title="" data-original-title="Menor que"></button>
                <button type="button" id="btnMayorQueFormula" class="btn-icon-base-bg btn-white btn-greater-than" data-toggle="tooltip" data-placement="top" title="" data-original-title="Mayor que"></button>
                <button type="button" id="btnMenorIgualQueFormula" class="btn-icon-base-bg btn-white btn-less-than-or-equal-to" data-toggle="tooltip" data-placement="top" title="" data-original-title="Menor o igual que"></button>
                <button type="button" id="btnMayorIgualQueFormula" class="btn-icon-base-bg btn-white btn-greater-than-or-equal-to" data-toggle="tooltip" data-placement="top" title="" data-original-title="Mayor o igual que"></button>
                <button type="button" id="btnIgualQueFormula" class="btn-icon-base-bg btn-white btn-equal-to" data-toggle="tooltip" data-placement="top" title="" data-original-title="Igual que"></button>
                <button type="button" id="btnLeftFormula" class="btn-icon-base-bg btn-white btn-parentheses-open" data-toggle="tooltip" data-placement="top" title="" data-original-title="Paréntesis abierto"></button>
                <button type="button" id="btnRightFormula" class="btn-icon-base-bg btn-white btn-parentheses-close" data-toggle="tooltip" data-placement="top" title="" data-original-title="Paréntesis cerrado"></button>
            </div>
        </div>
    </div>

    <div class="acciones col-lg-2 col-md-2 col-sm-3 col-xs-3">
        <div class="row">
            <div class="col text-center">
                <h4 class="text-leftThe">Acciones</h4>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <button type="button" id="btnResetFormula" class="btn-icon-base-bg btn-white btn-reload" data-toggle="tooltip" data-placement="top" title="" data-original-title="Ejecutar Fórmula"></button>
                <button type="button" id="btnRemoverItemFormula" class="btn-icon-base-bg btn-white btn-delete" data-toggle="tooltip" data-placement="top" title="" data-original-title="Eliminar ítem"></button>
            </div>
        </div>
    </div>


    <div class="formula col-lg-9 col-md-11 col-sm-12 mt-4 mb-1 text-center">
        FTRB01-1 + FTRB01-2
    </div>

</div>
    

