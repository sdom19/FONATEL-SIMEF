@using GB.SIMEF.Resources;

@{
    ViewBag.Title = "Fórmulas de Cálculo";
    Layout = "~/Views/Shared/_LayoutFONATEL.cshtml";
}

@section scripts {
    @*@Scripts.Render("~/bundles/FONATEL/FormulaCalculo")*@
}

@Html.Hidden("modoFormulario", (string)ViewBag.ModoFormulario)

<div class="row mt-5">
    <div class="col-sm-12">
        <div class="text-right">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">@Etiquetas.LabelInicio</a></li>
                    <li class="breadcrumb-item active"><a href="/FormulaCalculo/Index">Fórmulas de Cálculo</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.TituloVista</li>
                </ol>
            </nav>
        </div>
    </div>
</div>




<div class="stepwizard">
    <div class="stepwizard-row setup-panel step_navigation_indicador">
        <div class="stepwizard-step" data-step="0">
            <p>Indicador</p>
            <a href="#step-1" type="button" class="btn btn-circle">1</a>

        </div>
        <div class="stepwizard-step" data-step="1">
            <p>Fórmula</p>
            <a href="#step-2" type="button" class="btn btn-circle">2</a>

        </div>
    </div>
</div>




<div class="row stepwizard-content-container hidden" id="step-1">
    <div class="col-lg-12">
        <h2 class="page-title-fonatel text-center">@ViewBag.TituloVista</h2>
        <hr />
    </div>
    <div class="col-lg-12">

        @Html.Partial("_CrearFormula")
    </div>
</div>



<div class="row stepwizard-content-container hidden" id="step-2">
    <div class="col-sm-12">
        <h2 class="page-title-fonatel text-center">Agregar Fórmula de Cálculo</h2>
        <hr />
    </div>
    <div class="col-sm-12">

        @Html.Partial("_GestionFormulas")
    </div>
    <div class="col-sm-12 mt-4">
        @Html.Partial("_TablaIndicadores")
        @Html.Partial("_ModalDetalleAgregacion")
    </div>

    <div class="col-sm-12 mt-5">
        @Html.Partial("_FormulaCalculo")
    </div>

    <div class="col-sm-12 text-center mt-5">
        <button type="submit" data-toggle="tooltip" data-placement="top" title="Guardar" id="btnGuardarGestionFormulaCalculo" class="btn btn-fonatel btn-success-fonatel">@Etiquetas.BotonGuardar</button>
        <button type="submit" data-toggle="tooltip" data-placement="top" title="Cancelar" id="btnCancelarGestionFormulaCalculo" class="btn btn-fonatel btn-error-fonatel">@Etiquetas.BotonCancelar</button>
        <button type="submit" data-toggle="tooltip" data-placement="top" title="Finalizar" id="btnFinalizarFormulaCalculo" class="btn btn-fonatel btn-info-fonatel">@Etiquetas.BotonFinalizar</button>
    </div>

    <div class="col-12 pull-right mt-4">
        <button type="button" id="btnAtrasGestionFormula" class="btn btn-fonatel btn-goback" aria-label="Left Align">
            <span aria-hidden="true"></span>@Etiquetas.BotonAtras
        </button>
    </div>
</div>

<script src="~/Scripts/Fonatel/JsFormulasCalculo.js"></script>



