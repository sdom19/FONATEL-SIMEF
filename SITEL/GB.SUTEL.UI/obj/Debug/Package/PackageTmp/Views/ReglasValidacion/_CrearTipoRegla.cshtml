
  <div class="row">
      <div class="col-md-4 col-sm-12 col-md-offset-2 col-sm-offset-0">

          <div class="form-group row">
              <label for="ddlVariableRegla" class="col-sm-12 col-form-label">Variable</label>
              <div class="col-sm-12">
                  <select class="form-control required listasDesplegables" id="ddlVariableRegla">
                      <option></option>
                      <option value="1">Cantidad Torres</option>
                      <option value="2">Estado de Torres</option>
                  </select>
                  <br />
                  <small id="VariableHelp" class="form-text text-danger">El Indicador es requerido</small>
              </div>
          </div>



          <div class="form-group row">
              <label for="ddlOperadorRegla" class="col-sm-12 col-form-label">Operador</label>
              <div class="col-sm-12">
                  <select class="form-control required listasDesplegables" aria-label="Default select example" id="ddlOperadorRegla">
                      <option></option>
                      <option value="1">igual</option>
                      <option value="2">menor que</option>
                      <option value="3">mayor que</option>
                      <option value="4">menor o igual que</option>
                      <option value="5">mayor o igual que</option>
                      <option value="6">diferente</option>
                  </select>
                  <br />
                  <small id="OperadorHelp" class="form-text text-danger">El Indicador es requerido</small>
              </div>
          </div>

      </div>

      <div class="col-md-5 col-sm-12 col-md-offset-1 col-sm-offset-0">



          <div class="form-group row">
              <label for="ddlTipoRegla" class="col-sm-12 col-form-label ">Tipo Regla</label>
              <div class="col-sm-12">
                  <select class="form-control required listasDesplegables" aria-label="Default select example" id="ddlTipoRegla">
                      <option></option>
                      <option value="1">Fórmula cambio mensual</option>
                      <option value="2">Fórmula contra otro indicador</option>
                      <option value="3">Fórmula contra constante</option>
                      <option value="4">Fórmula contra atributos válidos</option>
                      <option value="5">Fórmula actualización secuencial</option>
                  </select>
                  <br />
                  <small id="TipoReglaHelp" class="form-text text-danger">El tipo es requerido</small>
              </div>

          </div>

          <div class="hidden" id="divFormulaContraConstante">
              <div class="form-group row">
                  <label for="txtConstanteRegla" class="col-sm-12 col-form-label">Valor Constante</label>
                  <div class="col-sm-12">
                      <input type="text" class="form-control" id="txtConstanteRegla" placeholder="Constante">
                      <small id="txtConstanteReglaHelp" class="form-text text-danger">El Valor Constante es requerido</small>
                  </div>
              </div>
          </div>
          <div class="hidden" id="divFormulaContraIndicador">

              <div class="form-group row">
                  <label for="ddlIndicadorComparacionRegla" class="col-sm-12 col-form-label">Indicador Comparación</label>
                  <div class="col-sm-12">
                      <select class="form-control required listasDesplegables" id="ddlIndicadorComparacionRegla">
                          <option></option>
                          <option value="1">Torres Según Estado</option>
                          <option value="2">CPSP conectados</option>
                          <option value="3">Hogares Benificiados</option>
                          <option value="4">Dispositivos entregados</option>
                      </select>
                      <br />
                      <small id="ddlIndicadorComparacionHelp" class="form-text text-danger">El Indicador es requerido</small>
                  </div>
              </div>


              <div class="form-group row">
                  <label for="ddlVariableComparacionRegla" class="col-sm-12 col-form-label">Variable Comparación</label>
                  <div class="col-sm-12">
                      <select class="form-control required listasDesplegables" id="ddlVariableComparacionRegla">
                          <option></option>
                          <option value="1">Cantidad Torres</option>
                          <option value="2">Estado de Torres</option>
                      </select>
                      <br />
                      <small id="ddlVariableComparacionReglaHelp" class="form-text text-danger">El Indicador es requerido</small>
                  </div>
              </div>
          </div>


          <div class="hidden" id="divFormulaContraAtributosValido">
              <div class="form-group row">
                  <label for="ddlAtributosValidosRegla" class="col-sm-12 col-form-label">Atributos Validos</label>
                  <div class="col-sm-12">
                      <select multiple class="form-control required listasDesplegables" id="ddlAtributosValidosRegla">
                          <option></option>
                          <option value="1">San jose</option>
                          <option value="2">Heredia</option>
                          <option value="2">limon</option>
                          <option value="2">Puntarena</option>
                      </select>
                      <br />
                      <small id="ddlAtributosValidosReglaHelp" class="form-text text-danger">El Indicador es requerido</small>
                  </div>
              </div>
          </div>



      </div>
  </div>
   <div class="row">
        <div class="col-sm-12 text-center mt-5">
            <button id="btnGuardarReglaTipo" class="btn btn-fonatel btn-success-fonatel">Guardar</button>
            <button type="submit" class="btn btn-fonatel btn-error-fonatel">Cancelar</button>
        </div>
    </div>


