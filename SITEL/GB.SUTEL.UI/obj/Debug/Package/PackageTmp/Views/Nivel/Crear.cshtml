@model GB.SUTEL.UI.Models.NivelViewModels


<form id="formCreate" method="post" 
      data-ajax="true" action="@Url.Action("Crear")" 
      data-ajax-message="Guardando Nivel...">
   



        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="modal fade" id="modalCrearNivel">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Crear Nivel</h4>
                    </div>
                    <div class="modal-body">

                        <div class="form-horizontal">

                            <div class="form-group">
                                @Html.LabelFor(model => model.itemNivel.DescNivel, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.itemNivel.DescNivel, new { htmlAttributes = new { @class = "form-control" } })
                                    <br />
                                    @Html.ValidationMessageFor(model => model.itemNivel.DescNivel, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="alert alert-danger hidden" role="alert" id="divMensajeErrorNuevoNivel">
                            <span id="MyerrorMensaje"></span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Crear" class="btn btn-success"  alt="Crear" title="Crear"/>
                        <button type="button" class="btn btn-danger" data-dismiss="modal" title="Cancelar">Cancelar</button>                        
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

    </form>
