
@{
    ViewBag.Title = "Crear Indicadores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container body-content">
    <div class="row">
        <div class="col-sm-12 col-md-7">
            <div class="step_navigation_indicador">
                <ul class='nav nav-wizard'>

                    <li class='active'><a href='#step1' data-toggle="tab">Indicador</a></li>

                    <li><a href='#step2' data-toggle="tab">Variables</a></li>

                    <li><a href='#step3' data-toggle="tab">Categorías</a></li>

                </ul>
            </div>
        </div>
        <div class="col-sm-12 col-md-5">
            <div class="text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                        <li class="breadcrumb-item active"><a href="@Url.Action( "create","IndicadorFonatel")">Indicadores</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Crear Indicador</li>
                    </ol>
                </nav>
            </div>

        </div>
    </div>




    <div class="row">
        <div class="col-lg-12 contenedor" id="step1">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-title-fonatel text-center">Crear Indicador</h2>
                    <hr />
                </div>
                <div class="col-lg-12">
                    @Html.Partial("_CrearIndicador")
                    @Html.Partial("_ModalTipoIndicador")
                    @Html.Partial("_ModalGrupoIndicador")
                </div>
            </div>



        </div>

        <div class="col-lg-12 hidden contenedor" id="step2">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-title-fonatel text-center">Detalle Variables</h2>
                    <hr />
                </div>
                <div class="col-lg-12">
                    @Html.Partial("_CrearVariable")
                </div>
                <div class="col-lg-12">
                    @Html.Partial("_TablaDetalleVariable")
                </div>
            </div>

        </div>

        <div class="col-lg-12 hidden contenedor" id="step3">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-title-fonatel text-center">Detalle Categoría</h2>
                    <hr />
                </div>
                <div class="col-lg-12">
                    @Html.Partial("_CrearCategoria")
                </div>
                <div class="col-lg-12">
                    @Html.Partial("_TablaDetalleCategoria")
                </div>
            </div>
        </div>
    </div>

</div>


