
@{
    ViewBag.Title = "Fuentes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                    <li class="breadcrumb-item active"><a href="/Fonatel/Fuentes/index">Fuentes</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Crear Fuente</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="stepwizard col-sm-offset-3">
    <div class="stepwizard-row setup-panel step_navigation_fuentes">
        <div class="stepwizard-step">
            <p>Fuente</p>
            <a href="#step-1" type="button" class="btn btn-circle btn-info-fonatel ">1</a>

        </div>
        <div class="stepwizard-step">
            <p>Destinatarios</p>
            <a href="#step-2" type="button" class="btn btn-circle btn-default">2</a>
        </div>
    </div>
</div>




<div class="row divContenedor_fuentes" id="step-1">
    <div class="col-lg-12">
        <h2 class="page-title-fonatel text-center">Crear Fuente</h2>
        <hr />
    </div>
    <div class="col-lg-12">

        @Html.Partial("_CrearFuente")
    </div>
</div>



<div class="row divContenedor_fuentes hidden" id="step-2">
    <div>
        <h2 class="page-title-fonatel text-center">Agregar Destinatario</h2>
        <hr />
    </div>
    <div class="col-lg-12">
        @Html.Partial("_CrearDetalle")
    </div>
    <div class="col-lg-12">
        @Html.Partial("_TablaDetalleFuentes")
    </div>

    <div class="col-sm-12 text-center">
        <button type="submit" id="btnAtrasFuentes" class="btn btn-fonatel btn-info-fonatel">Atras</button>
        <button type="submit" id="btnGuardarFuentesCompleto" class="btn btn-fonatel btn-info-fonatel">Finalizar</button>
    </div>
</div>




